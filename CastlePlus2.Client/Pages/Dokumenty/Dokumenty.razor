@page "/dokumenty"
@using MudBlazor
@using CastlePlus2.Client.Services.Dokumenty
@using CastlePlus2.Contracts.DTOs.Dokumenty
@using CastlePlus2.Contracts.Requests.Dokumenty
@inject IDokumentyService DokumentyService
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<MudText Typo="Typo.h4" Class="fw-700 mb-4">Dokumenty</MudText>

<MudPaper Class="pa-4">
    <MudTable Items="_items"
              Dense="true"
              Hover="true"
              Bordered="true"
              Striped="true"
              Filter="FilterFunc">

        <ToolBarContent>
            <MudText Typo="Typo.h6">Lista</MudText>
            <MudSpacer />

            <MudTextField @bind-Value="_search"
                          Placeholder="Szukaj..."
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search"
                          Immediate="true"
                          Class="mr-4"
                          Margin="Margin.Dense" />

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Add"
                       OnClick="CreateAsync">
                Dodaj
            </MudButton>
        </ToolBarContent>

        <HeaderContent>
            <MudTh>Id</MudTh>
            <MudTh>Nazwa</MudTh>
            <MudTh>Ścieżka</MudTh>
            <MudTh>Owner</MudTh>
            <MudTh>Data</MudTh>
            <MudTh></MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd DataLabel="Id">@context.IdDokumentu</MudTd>
            <MudTd DataLabel="Nazwa">@context.Nazwa</MudTd>
            <MudTd DataLabel="Ścieżka">@context.SciezkaPliku</MudTd>
            <MudTd DataLabel="Owner">@context.IdEncjiOwner</MudTd>
            <MudTd DataLabel="Data">@context.DataUtworzenia</MudTd>

            <MudTd DataLabel="Akcje" Class="text-right">
                <MudIconButton Icon="@Icons.Material.Filled.Edit"
                               Color="Color.Primary"
                               Size="Size.Small"
                               OnClick="@(() => EditAsync(context))" />

                <MudIconButton Icon="@Icons.Material.Filled.Delete"
                               Color="Color.Error"
                               Size="Size.Small"
                               OnClick="@(() => DeleteAsync(context))" />
            </MudTd>
        </RowTemplate>

        <NoRecordsContent>
            <MudText Class="pa-4">Brak rekordów.</MudText>
        </NoRecordsContent>

    </MudTable>
</MudPaper>

@code {
    private List<DokumentDto> _items = new();
    private string _search = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await ReloadAsync();
    }

    private async Task ReloadAsync()
    {
        try
        {
            _items = (await DokumentyService.GetAllAsync()).ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd pobierania dokumentów: {ex.Message}", Severity.Error);
        }
    }

    private bool FilterFunc(DokumentDto item)
    {
        if (string.IsNullOrWhiteSpace(_search))
            return true;

        var s = _search.Trim();

        return item.IdDokumentu.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || (item.Nazwa?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || (item.SciezkaPliku?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || (item.Opis?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || (item.IdEncjiOwner?.ToString().Contains(s, StringComparison.OrdinalIgnoreCase) ?? false);
    }

    private async Task CreateAsync()
    {
        var parameters = new DialogParameters
        {
            ["Model"] = new DokumentDto(),
            ["IsEdit"] = false
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };
        var dialog = DialogService.Show<DokumentDialog>("Dodaj dokument", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is DokumentDto model)
        {
            try
            {
                var created = await DokumentyService.CreateAsync(new CreateDokumentRequest
                {
                    IdEncjiOwner = model.IdEncjiOwner,
                    Nazwa = model.Nazwa,
                    Opis = model.Opis,
                    SciezkaPliku = model.SciezkaPliku
                });

                Snackbar.Add($"Dodano dokument (Id={created.IdDokumentu}).", Severity.Success);
                await ReloadAsync();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Błąd dodawania: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task EditAsync(DokumentDto item)
    {
        var clone = new DokumentDto
        {
            IdDokumentu = item.IdDokumentu,
            IdEncjiOwner = item.IdEncjiOwner,
            Nazwa = item.Nazwa,
            Opis = item.Opis,
            SciezkaPliku = item.SciezkaPliku,
            DataUtworzenia = item.DataUtworzenia
        };

        var parameters = new DialogParameters
        {
            ["Model"] = clone,
            ["IsEdit"] = true
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };
        var dialog = DialogService.Show<DokumentDialog>("Edytuj dokument", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is DokumentDto model)
        {
            try
            {
                var ok = await DokumentyService.UpdateAsync(model.IdDokumentu, new UpdateDokumentRequest
                {
                    IdEncjiOwner = model.IdEncjiOwner,
                    Nazwa = model.Nazwa,
                    Opis = model.Opis,
                    SciezkaPliku = model.SciezkaPliku
                });

                if (!ok)
                {
                    Snackbar.Add("Nie znaleziono rekordu (404).", Severity.Warning);
                    return;
                }

                Snackbar.Add("Zapisano zmiany.", Severity.Success);
                await ReloadAsync();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Błąd zapisu: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task DeleteAsync(DokumentDto item)
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Usuń",
            $"Czy na pewno usunąć dokument Id={item.IdDokumentu}?",
            yesText: "Usuń",
            cancelText: "Anuluj");

        if (confirm != true)
            return;

        try
        {
            var ok = await DokumentyService.DeleteAsync(item.IdDokumentu);
            if (!ok)
            {
                Snackbar.Add("Nie znaleziono rekordu (404).", Severity.Warning);
                return;
            }

            Snackbar.Add("Usunięto.", Severity.Success);
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd usuwania: {ex.Message}", Severity.Error);
        }
    }
}
