@page "/dokumenty/powiazania"
@using MudBlazor
@using CastlePlus2.Contracts.DTOs.Dokumenty
@using CastlePlus2.Client.Services.Dokumenty
@inject IPowiazaniaDokumentuService PowiazaniaService
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<MudText Typo="Typo.h4" Class="fw-700 mb-4">Powiązania dokumentu</MudText>

<MudPaper Class="pa-4">
    <MudTable Items="_items"
              Dense="true"
              Hover="true"
              Bordered="true"
              Striped="true"
              Filter="FilterFunc">

        <ToolBarContent>
            <MudText Typo="Typo.h6">Lista</MudText>
            <MudSpacer />

            <MudTextField @bind-Value="_search"
                          Placeholder="Szukaj..."
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search"
                          Immediate="true"
                          Class="mr-4"
                          Margin="Margin.Dense" />

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Add"
                       OnClick="CreateAsync">
                Dodaj
            </MudButton>
        </ToolBarContent>

        <HeaderContent>
            <MudTh>IdPowiazania</MudTh>
            <MudTh>IdDokumentu</MudTh>
            <MudTh>IdEncji</MudTh>
            <MudTh></MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd DataLabel="IdPowiazania">@context.IdPowiazania</MudTd>
            <MudTd DataLabel="IdDokumentu">@context.IdDokumentu</MudTd>
            <MudTd DataLabel="IdEncji">@context.IdEncji</MudTd>

            <MudTd DataLabel="Akcje" Class="text-right">
                <MudIconButton Icon="@Icons.Material.Filled.Edit"
                               Color="Color.Primary"
                               Size="Size.Small"
                               OnClick="@(() => EditAsync(context))" />

                <MudIconButton Icon="@Icons.Material.Filled.Delete"
                               Color="Color.Error"
                               Size="Size.Small"
                               OnClick="@(() => DeleteAsync(context))" />
            </MudTd>
        </RowTemplate>

        <NoRecordsContent>
            <MudText Class="pa-4">Brak rekordów.</MudText>
        </NoRecordsContent>

    </MudTable>
</MudPaper>

@code {
    private List<PowiazanieDokumentuDto> _items = new();
    private string _search = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await ReloadAsync();
    }

    private async Task ReloadAsync()
    {
        try
        {
            _items = (await PowiazaniaService.GetAllAsync()).ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd pobierania powiązań: {ex.Message}", Severity.Error);
        }
    }

    private bool FilterFunc(PowiazanieDokumentuDto item)
    {
        if (string.IsNullOrWhiteSpace(_search))
            return true;

        var s = _search.Trim();

        return item.IdPowiazania.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || item.IdDokumentu.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || item.IdEncji.ToString().Contains(s, StringComparison.OrdinalIgnoreCase);
    }

    private async Task CreateAsync()
    {
        var parameters = new DialogParameters
        {
            ["Model"] = new PowiazanieDokumentuDto(),
            ["IsEdit"] = false
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };
        var dialog = DialogService.Show<PowiazanieDokumentuDialog>("Dodaj powiązanie", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is PowiazanieDokumentuDto model)
        {
            try
            {
                var created = await PowiazaniaService.CreateAsync(new CastlePlus2.Contracts.Requests.Dokumenty.CreatePowiazanieDokumentuRequest
                {
                    IdDokumentu = model.IdDokumentu,
                    IdEncji = model.IdEncji
                });

                Snackbar.Add($"Dodano powiązanie (Id={created.IdPowiazania}).", Severity.Success);
                await ReloadAsync();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Błąd dodawania: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task EditAsync(PowiazanieDokumentuDto item)
    {
        var clone = new PowiazanieDokumentuDto
        {
            IdPowiazania = item.IdPowiazania,
            IdDokumentu = item.IdDokumentu,
            IdEncji = item.IdEncji
        };

        var parameters = new DialogParameters
        {
            ["Model"] = clone,
            ["IsEdit"] = true
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };
        var dialog = DialogService.Show<PowiazanieDokumentuDialog>("Edytuj powiązanie", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is PowiazanieDokumentuDto model)
        {
            try
            {
                var ok = await PowiazaniaService.UpdateAsync(model.IdPowiazania, new CastlePlus2.Contracts.Requests.Dokumenty.UpdatePowiazanieDokumentuRequest
                {
                    IdDokumentu = model.IdDokumentu,
                    IdEncji = model.IdEncji
                });

                if (!ok)
                {
                    Snackbar.Add("Nie znaleziono rekordu (404).", Severity.Warning);
                    return;
                }

                Snackbar.Add("Zapisano zmiany.", Severity.Success);
                await ReloadAsync();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Błąd zapisu: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task DeleteAsync(PowiazanieDokumentuDto item)
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Usuń",
            $"Czy na pewno usunąć powiązanie IdPowiazania={item.IdPowiazania}?",
            yesText: "Usuń",
            cancelText: "Anuluj");

        if (confirm != true)
            return;

        try
        {
            var ok = await PowiazaniaService.DeleteAsync(item.IdPowiazania);
            if (!ok)
            {
                Snackbar.Add("Nie znaleziono rekordu (404).", Severity.Warning);
                return;
            }

            Snackbar.Add("Usunięto.", Severity.Success);
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd usuwania: {ex.Message}", Severity.Error);
        }
    }
}
