@using MudBlazor
@using CastlePlus2.Contracts.DTOs.Rdzen

<MudDialog>
    <DialogContent>
        <MudForm @ref="_form">
            <MudGrid Spacing="2">
                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.KodBudynku"
                                  Label="Kod Budynku"
                                  Required="true"
                                  RequiredError="Kod jest wymagany"
                                  MaxLength="50"
                                  Variant="Variant.Outlined"
                                  Margin="Margin.Dense" />
                </MudItem>

                <MudItem xs="12">
                    <MudTextField @bind-Value="_idNieruchomosciString"
                                  Label="ID Nieruchomości (GUID)"
                                  Required="true"
                                  RequiredError="Musisz podać ID Nieruchomości"
                                  HelperText="Wklej GUID nieruchomości nadrzędnej"
                                  Variant="Variant.Outlined"
                                  Margin="Margin.Dense" />
                </MudItem>

                <MudItem xs="6">
                    <MudNumericField T="short?"
                                     @bind-Value="Model.Kondygnacje"
                                     Label="Kondygnacje"
                                     Variant="Variant.Outlined"
                                     Margin="Margin.Dense" />
                </MudItem>

                <MudItem xs="6">
                    <MudNumericField T="decimal?"
                                     @bind-Value="Model.PowierzchniaUzytkowa"
                                     Label="Powierzchnia (m²)"
                                     Variant="Variant.Outlined"
                                     Margin="Margin.Dense" />
                </MudItem>

                <MudItem xs="12">
                    <MudNumericField T="long?"
                                     @bind-Value="Model.IdAdresu"
                                     Label="ID Adresu (opcjonalne)"
                                     Variant="Variant.Outlined"
                                     Margin="Margin.Dense" />
                </MudItem>

                @if (IsEdit)
                {
                    <MudItem xs="12">
                        <MudText Typo="Typo.caption" Color="Color.Secondary">
                            ID: @Model.Id
                        </MudText>
                    </MudItem>
                }
            </MudGrid>
        </MudForm>
    </DialogContent>

    <DialogActions>
        <MudButton Variant="Variant.Text" OnClick="Cancel">Anuluj</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Zapisz</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public BudynekDto Model { get; set; } = new();
    [Parameter] public bool IsEdit { get; set; }

    private MudForm? _form;
    private string _idNieruchomosciString = string.Empty;

    protected override void OnInitialized()
    {
        if (Model.IdNieruchomosci != Guid.Empty)
            _idNieruchomosciString = Model.IdNieruchomosci.ToString();
    }

    private void Cancel() => MudDialog.Cancel();

    private async Task Submit()
    {
        if (_form is null) return;

        await _form.Validate();
        if (!_form.IsValid) return;

        // Ręczna walidacja GUIDa (docelowo zamienisz to na MudSelect + lista nieruchomości)
        if (!Guid.TryParse(_idNieruchomosciString?.Trim(), out var guidResult))
            return;

        Model.IdNieruchomosci = guidResult;

        // Minimalne porządki
        Model.KodBudynku = (Model.KodBudynku ?? string.Empty).Trim();

        MudDialog.Close(DialogResult.Ok(Model));
    }
}
