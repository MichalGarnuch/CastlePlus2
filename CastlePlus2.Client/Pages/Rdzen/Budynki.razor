@page "/rdzen/budynki"
@using MudBlazor
@using CastlePlus2.Client.Services.Rdzen
@using CastlePlus2.Contracts.DTOs.Rdzen
@using CastlePlus2.Contracts.Requests.Rdzen
@inject IBudynkiService BudynkiService
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<MudText Typo="Typo.h4" Class="fw-700 mb-4">Budynki</MudText>

<MudPaper Class="pa-4">
    <MudTable Items="_items"
              Dense="true"
              Hover="true"
              Bordered="true"
              Striped="true"
              Filter="FilterFunc"
              Loading="_loading">
        <ToolBarContent>
            <MudText Typo="Typo.h6">Rejestr Budynków</MudText>
            <MudSpacer />

            <MudTextField @bind-Value="_search"
                          Placeholder="Szukaj (Kod, ID, Nieruchomość GUID)..."
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search"
                          Immediate="true"
                          Class="mr-4"
                          Margin="Margin.Dense" />

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Add"
                       OnClick="CreateAsync">
                Dodaj budynek
            </MudButton>
        </ToolBarContent>

        <HeaderContent>
            <MudTh>Kod</MudTh>
            <MudTh>Kondygnacje</MudTh>
            <MudTh>Powierzchnia</MudTh>
            <MudTh>Nieruchomość (GUID)</MudTh>
            <MudTh></MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd DataLabel="Kod">@context.KodBudynku</MudTd>
            <MudTd DataLabel="Kondygnacje">@context.Kondygnacje</MudTd>
            <MudTd DataLabel="Powierzchnia">@context.PowierzchniaUzytkowa</MudTd>
            <MudTd DataLabel="Nieruchomość">
                <MudText Typo="Typo.caption">@context.IdNieruchomosci</MudText>
            </MudTd>

            <MudTd DataLabel="Akcje" Class="text-right">
                <MudIconButton Icon="@Icons.Material.Filled.Edit"
                               Color="Color.Primary"
                               Size="Size.Small"
                               OnClick="@(() => EditAsync(context))" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete"
                               Color="Color.Error"
                               Size="Size.Small"
                               OnClick="@(() => DeleteAsync(context))" />
            </MudTd>
        </RowTemplate>

        <NoRecordsContent>
            <MudText Class="pa-4">Brak rekordów.</MudText>
        </NoRecordsContent>
    </MudTable>
</MudPaper>

@code {
    private List<BudynekDto> _items = new();
    private string _search = string.Empty;
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        await ReloadAsync();
    }

    private async Task ReloadAsync()
    {
        _loading = true;
        try
        {
            _items = await BudynkiService.GetAllAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd pobierania danych: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private bool FilterFunc(BudynekDto item)
    {
        if (string.IsNullOrWhiteSpace(_search))
            return true;

        var s = _search.Trim();

        return (item.KodBudynku?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || item.Id.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || item.IdNieruchomosci.ToString().Contains(s, StringComparison.OrdinalIgnoreCase);
    }

    private async Task CreateAsync()
    {
        var parameters = new DialogParameters
        {
            ["Model"] = new BudynekDto(),
            ["IsEdit"] = false
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };
        var dialog = DialogService.Show<BudynekDialog>("Nowy budynek", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is BudynekDto model)
        {
            try
            {
                var request = new CreateBudynekRequest
                {
                    IdNieruchomosci = model.IdNieruchomosci,
                    KodBudynku = model.KodBudynku,
                    IdAdresu = model.IdAdresu,
                    Kondygnacje = model.Kondygnacje,
                    PowierzchniaUzytkowa = model.PowierzchniaUzytkowa
                };

                // Standard "Dokumenty": Create zwraca DTO
                var createdDto = await BudynkiService.CreateAsync(request);

                Snackbar.Add($"Dodano budynek: {createdDto.KodBudynku}", Severity.Success);
                await ReloadAsync();
            }
            catch (Exception ex)
            {
                // Tu wpadnie m.in. 400 z walidacji (FluentValidation) -> ExceptionHandlingMiddleware
                Snackbar.Add($"Błąd: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task EditAsync(BudynekDto item)
    {
        var clone = new BudynekDto
        {
            Id = item.Id,
            IdNieruchomosci = item.IdNieruchomosci,
            KodBudynku = item.KodBudynku,
            IdAdresu = item.IdAdresu,
            Kondygnacje = item.Kondygnacje,
            PowierzchniaUzytkowa = item.PowierzchniaUzytkowa
        };

        var parameters = new DialogParameters
        {
            ["Model"] = clone,
            ["IsEdit"] = true
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };
        var dialog = DialogService.Show<BudynekDialog>("Edycja budynku", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is BudynekDto model)
        {
            try
            {
                var request = new UpdateBudynekRequest
                {
                    IdNieruchomosci = model.IdNieruchomosci,
                    KodBudynku = model.KodBudynku,
                    IdAdresu = model.IdAdresu,
                    Kondygnacje = model.Kondygnacje,
                    PowierzchniaUzytkowa = model.PowierzchniaUzytkowa
                };

                var success = await BudynkiService.UpdateAsync(model.Id, request);

                if (success)
                {
                    Snackbar.Add("Zapisano zmiany.", Severity.Success);
                    await ReloadAsync();
                }
                else
                {
                    Snackbar.Add("Nie znaleziono obiektu (404).", Severity.Warning);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Błąd edycji: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task DeleteAsync(BudynekDto item)
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Usuwanie",
            $"Czy na pewno usunąć budynek {item.KodBudynku}?",
            yesText: "Usuń",
            cancelText: "Anuluj");

        if (confirm == true)
        {
            try
            {
                var success = await BudynkiService.DeleteAsync(item.Id);

                if (success)
                {
                    Snackbar.Add("Usunięto.", Severity.Success);
                    await ReloadAsync();
                }
                else
                {
                    Snackbar.Add("Nie znaleziono obiektu (404).", Severity.Warning);
                }
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Błąd usuwania: {ex.Message}", Severity.Error);
            }
        }
    }
}
