@page "/rdzen/adresy"
@using MudBlazor
@using CastlePlus2.Contracts.DTOs.Rdzen
@using CastlePlus2.Contracts.Requests.Rdzen
@using CastlePlus2.Client.Services.Rdzen
@inject IAdresyService AdresyService
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<MudText Typo="Typo.h4" Class="fw-700 mb-4">Adresy</MudText>

<MudPaper Class="pa-4">
    <MudTable Items="_items"
              Dense="true"
              Hover="true"
              Bordered="true"
              Striped="true"
              Filter="FilterFunc">

        <ToolBarContent>
            <MudText Typo="Typo.h6">Lista</MudText>
            <MudSpacer />

            <MudTextField @bind-Value="_search"
                          Placeholder="Szukaj..."
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search"
                          Immediate="true"
                          Class="mr-4"
                          Margin="Margin.Dense" />

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Add"
                       OnClick="CreateAsync">
                Dodaj
            </MudButton>
        </ToolBarContent>

        <HeaderContent>
            <MudTh>Id</MudTh>
            <MudTh>Adres</MudTh>
            <MudTh>Kraj</MudTh>
            <MudTh>Woj.</MudTh>
            <MudTh>Miejscowość</MudTh>
            <MudTh>Ulica</MudTh>
            <MudTh>Nr</MudTh>
            <MudTh>Kod</MudTh>
            <MudTh></MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd DataLabel="Id">@context.IdAdresu</MudTd>
            <MudTd DataLabel="Adres">@(!string.IsNullOrWhiteSpace(context.AdresPelny) ? context.AdresPelny : context.AdresSformatowany)</MudTd>
            <MudTd DataLabel="Kraj">@context.Kraj</MudTd>
            <MudTd DataLabel="Woj.">@context.Wojewodztwo</MudTd>
            <MudTd DataLabel="Miejscowość">@context.Miejscowosc</MudTd>
            <MudTd DataLabel="Ulica">@context.Ulica</MudTd>
            <MudTd DataLabel="Nr">@context.Numer</MudTd>
            <MudTd DataLabel="Kod">@context.KodPocztowy</MudTd>

            <MudTd DataLabel="Akcje" Class="text-right">
                <MudIconButton Icon="@Icons.Material.Filled.Edit"
                               Color="Color.Primary"
                               Size="Size.Small"
                               OnClick="@(() => EditAsync(context))" />

                <MudIconButton Icon="@Icons.Material.Filled.Delete"
                               Color="Color.Error"
                               Size="Size.Small"
                               OnClick="@(() => DeleteAsync(context))" />
            </MudTd>
        </RowTemplate>

        <NoRecordsContent>
            <MudText Class="pa-4">Brak rekordów.</MudText>
        </NoRecordsContent>

    </MudTable>
</MudPaper>

@code {
    private List<AdresDto> _items = new();
    private string _search = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await ReloadAsync();
    }

    private async Task ReloadAsync()
    {
        try
        {
            var data = await AdresyService.GetAllAsync();

            // nowa instancja listy = MudTable nie trzyma starej referencji
            _items = (data ?? new List<AdresDto>()).ToList();

            // wymuś re-render po async
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd pobierania adresów: {ex.Message}", Severity.Error);
        }
    }


    private bool FilterFunc(AdresDto item)
    {
        if (string.IsNullOrWhiteSpace(_search))
            return true;

        var s = _search.Trim();

        return (item.IdAdresu.ToString().Contains(s, StringComparison.OrdinalIgnoreCase))
               || (item.Kraj?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || (item.Wojewodztwo?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || (item.Powiat?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || (item.Gmina?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || (item.Miejscowosc?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || (item.Ulica?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || (item.Numer?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || (item.KodPocztowy?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || (item.AdresPelny?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || (item.AdresSformatowany?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false);
    }

    private async Task CreateAsync()
    {
        var parameters = new DialogParameters
        {
            ["Model"] = new AdresDto { Kraj = "Polska" },
            ["IsEdit"] = false
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };

        var dialog = await DialogService.ShowAsync<AdresDialog>("Dodaj adres", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is AdresDto model)
        {
            try
            {
                var request = new CreateAdresRequest
                {
                    Kraj = model.Kraj,
                    Wojewodztwo = model.Wojewodztwo,
                    Powiat = model.Powiat,
                    Gmina = model.Gmina,
                    Miejscowosc = model.Miejscowosc,
                    Ulica = model.Ulica,
                    Numer = model.Numer,
                    KodPocztowy = model.KodPocztowy,
                    AdresPelny = model.AdresPelny
                };

                var newId = await AdresyService.CreateAsync(request);
                Snackbar.Add($"Dodano adres (Id={newId}).", Severity.Success);
                await ReloadAsync();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Błąd dodawania adresu: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task EditAsync(AdresDto item)
    {
        var clone = new AdresDto
        {
            IdAdresu = item.IdAdresu,
            Kraj = item.Kraj,
            Wojewodztwo = item.Wojewodztwo,
            Powiat = item.Powiat,
            Gmina = item.Gmina,
            Miejscowosc = item.Miejscowosc,
            Ulica = item.Ulica,
            Numer = item.Numer,
            KodPocztowy = item.KodPocztowy,
            AdresPelny = item.AdresPelny
        };

        var parameters = new DialogParameters
        {
            ["Model"] = clone,
            ["IsEdit"] = true
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };

        var dialog = await DialogService.ShowAsync<AdresDialog>("Edytuj adres", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is AdresDto model)
        {
            try
            {
                var request = new UpdateAdresRequest
                {
                    Kraj = model.Kraj,
                    Wojewodztwo = model.Wojewodztwo,
                    Powiat = model.Powiat,
                    Gmina = model.Gmina,
                    Miejscowosc = model.Miejscowosc,
                    Ulica = model.Ulica,
                    Numer = model.Numer,
                    KodPocztowy = model.KodPocztowy,
                    AdresPelny = model.AdresPelny
                };

                var ok = await AdresyService.UpdateAsync(model.IdAdresu, request);
                if (!ok)
                {
                    Snackbar.Add("Nie znaleziono rekordu do edycji (404).", Severity.Warning);
                    return;
                }

                // 1) Aktualizacja lokalnej listy (żeby UI natychmiast pokazał nowe dane)
                var idx = _items.FindIndex(x => x.IdAdresu == model.IdAdresu);
                if (idx >= 0)
                {
                    _items[idx] = new AdresDto
                    {
                        IdAdresu = model.IdAdresu,
                        Kraj = model.Kraj,
                        Wojewodztwo = model.Wojewodztwo,
                        Powiat = model.Powiat,
                        Gmina = model.Gmina,
                        Miejscowosc = model.Miejscowosc,
                        Ulica = model.Ulica,
                        Numer = model.Numer,
                        KodPocztowy = model.KodPocztowy,
                        AdresPelny = model.AdresPelny
                        // AdresSformatowany (jeśli jest liczony) odświeży się z pól
                    };
                }

                // 2) Wymuszenie renderu
                await InvokeAsync(StateHasChanged);

                Snackbar.Add("Zapisano zmiany.", Severity.Success);

                // 3) Dodatkowo: dociągnij świeży stan z API (na wypadek, gdyby serwer coś normalizował)
                await ReloadAsync();

            }
            catch (Exception ex)
            {
                Snackbar.Add($"Błąd zapisu: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task DeleteAsync(AdresDto item)
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Usuń",
            $"Czy na pewno usunąć adres Id={item.IdAdresu}?",
            yesText: "Usuń",
            cancelText: "Anuluj");

        if (confirm != true)
            return;

        try
        {
            await AdresyService.DeleteAsync(item.IdAdresu);
            Snackbar.Add("Usunięto.", Severity.Success);
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd usuwania: {ex.Message}", Severity.Error);
        }
    }
}