@page "/rdzen/nieruchomosci"
@using MudBlazor
@using CastlePlus2.Contracts.DTOs.Rdzen
@using CastlePlus2.Contracts.DTOs.Podmioty
@using CastlePlus2.Contracts.Requests.Rdzen
@using CastlePlus2.Client.Services.Rdzen
@using CastlePlus2.Client.Services.Podmioty
@inject INieruchomosciService Service
@inject IAdresyService AdresyService
@inject IPodmiotyService PodmiotyService
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<MudText Typo="Typo.h4" Class="fw-700 mb-4">Nieruchomości</MudText>

<MudPaper Class="pa-4">
    <MudTable Items="_items"
              Dense="true"
              Hover="true"
              Bordered="true"
              Striped="true"
              Filter="FilterFunc"
              Loading="_loading">
        <ToolBarContent>
            <MudText Typo="Typo.h6">Lista</MudText>
            <MudSpacer />

            <MudTextField @bind-Value="_search"
                          Placeholder="Szukaj..."
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search"
                          Immediate="true"
                          Class="mr-4"
                          Margin="Margin.Dense" />

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Add"
                       OnClick="CreateAsync">
                Dodaj
            </MudButton>
        </ToolBarContent>

        <HeaderContent>
            <MudTh>Id</MudTh>
            <MudTh>Nazwa</MudTh>
            <MudTh>Adres główny</MudTh>
            <MudTh>Właściciel (podmiot)</MudTh>
            <MudTh></MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd DataLabel="Id">@context.Id</MudTd>
            <MudTd DataLabel="Nazwa">@context.Nazwa</MudTd>
            <MudTd DataLabel="Adres główny">@GetAdresLabel(context.IdAdresuGlownego)</MudTd>
            <MudTd DataLabel="Właściciel (podmiot)">@GetPodmiotLabel(context.IdPodmiotuWlasciciela)</MudTd>

            <MudTd DataLabel="Akcje" Class="text-right">
                <MudIconButton Icon="@Icons.Material.Filled.Edit"
                               Color="Color.Primary"
                               Size="Size.Small"
                               OnClick="@(() => EditAsync(context))" />

                <MudIconButton Icon="@Icons.Material.Filled.Delete"
                               Color="Color.Error"
                               Size="Size.Small"
                               OnClick="@(() => DeleteAsync(context))" />
            </MudTd>
        </RowTemplate>

        <NoRecordsContent>
            <MudText Class="pa-4">Brak rekordów.</MudText>
        </NoRecordsContent>

    </MudTable>
</MudPaper>

@code {
    private List<NieruchomoscDto> _items = new();
    private string _search = string.Empty;
    private bool _loading = true; // 2. DODANO ZMIENNĄ

    // Lookups
    private Dictionary<long, string> _adresy = new();
    private Dictionary<long, string> _podmioty = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadLookupsAsync();
        await ReloadAsync();
    }

    private async Task LoadLookupsAsync()
    {
        // Adresy
        try
        {
            var list = await AdresyService.GetAllAsync();
            _adresy = (list ?? new List<AdresDto>())
                .ToDictionary(
                    a => a.IdAdresu,
                    a => !string.IsNullOrWhiteSpace(a.AdresPelny) ? a.AdresPelny : a.AdresSformatowany
                );
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd pobierania adresów (lookup): {ex.Message}", Severity.Error);
            _adresy = new();
        }

        // Podmioty
        try
        {
            var list = await PodmiotyService.GetAllAsync();
            _podmioty = (list ?? new List<PodmiotDto>())
                .ToDictionary(p => p.IdPodmiotu, p => p.Nazwa);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd pobierania podmiotów (lookup): {ex.Message}", Severity.Error);
            _podmioty = new();
        }
    }

    private string GetAdresLabel(long? idAdresu)
    {
        if (idAdresu is null) return string.Empty;
        return _adresy.TryGetValue(idAdresu.Value, out var s) ? s : $"IdAdresu={idAdresu.Value}";
    }

    private string GetPodmiotLabel(long? idPodmiotu)
    {
        if (idPodmiotu is null) return string.Empty;
        return _podmioty.TryGetValue(idPodmiotu.Value, out var s) ? s : $"IdPodmiotu={idPodmiotu.Value}";
    }

    private async Task ReloadAsync()
    {
        // 3. OBSŁUGA STANU ŁADOWANIA
        _loading = true;
        try
        {
            var data = await Service.GetAllAsync();
            _items = (data ?? new List<NieruchomoscDto>()).ToList();
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd pobierania nieruchomości: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false; // Zawsze wyłącz na końcu
        }
    }

    private bool FilterFunc(NieruchomoscDto item)
    {
        if (string.IsNullOrWhiteSpace(_search))
            return true;

        var s = _search.Trim();

        // Szukamy również po labelach z lookupów
        var adresLabel = GetAdresLabel(item.IdAdresuGlownego);
        var podmiotLabel = GetPodmiotLabel(item.IdPodmiotuWlasciciela);

        return item.Id.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || (item.Nazwa?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || (!string.IsNullOrWhiteSpace(adresLabel) && adresLabel.Contains(s, StringComparison.OrdinalIgnoreCase))
               || (!string.IsNullOrWhiteSpace(podmiotLabel) && podmiotLabel.Contains(s, StringComparison.OrdinalIgnoreCase));
    }

    private async Task CreateAsync()
    {
        var parameters = new DialogParameters
        {
            ["Model"] = new NieruchomoscDto(),
            ["IsEdit"] = false,
            ["Adresy"] = _adresy,
            ["Podmioty"] = _podmioty
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };

        var dialog = await DialogService.ShowAsync<NieruchomoscDialog>("Dodaj nieruchomość", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is NieruchomoscDto model)
        {
            try
            {
                var req = new CreateNieruchomoscRequest
                {
                    Nazwa = model.Nazwa,
                    IdAdresuGlownego = model.IdAdresuGlownego,
                    IdPodmiotuWlasciciela = model.IdPodmiotuWlasciciela
                };

                var created = await Service.CreateAsync(req);
                Snackbar.Add($"Dodano nieruchomość (Id={created.Id}).", Severity.Success);
                await ReloadAsync();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Błąd dodawania: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task EditAsync(NieruchomoscDto item)
    {
        var clone = new NieruchomoscDto
        {
            Id = item.Id,
            Nazwa = item.Nazwa,
            IdAdresuGlownego = item.IdAdresuGlownego,
            IdPodmiotuWlasciciela = item.IdPodmiotuWlasciciela
        };

        var parameters = new DialogParameters
        {
            ["Model"] = clone,
            ["IsEdit"] = true,
            ["Adresy"] = _adresy,
            ["Podmioty"] = _podmioty
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };

        var dialog = await DialogService.ShowAsync<NieruchomoscDialog>("Edytuj nieruchomość", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is NieruchomoscDto model)
        {
            try
            {
                var req = new UpdateNieruchomoscRequest
                {
                    Nazwa = model.Nazwa,
                    IdAdresuGlownego = model.IdAdresuGlownego,
                    IdPodmiotuWlasciciela = model.IdPodmiotuWlasciciela
                };

                var ok = await Service.UpdateAsync(model.Id, req);
                if (!ok)
                {
                    Snackbar.Add("Nie znaleziono rekordu do edycji (404).", Severity.Warning);
                    return;
                }

                Snackbar.Add("Zapisano zmiany.", Severity.Success);
                await ReloadAsync();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Błąd zapisu: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task DeleteAsync(NieruchomoscDto item)
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Usuń",
            $"Czy na pewno usunąć nieruchomość Id={item.Id}?",
            yesText: "Usuń",
            cancelText: "Anuluj");

        if (confirm != true)
            return;

        try
        {
            var ok = await Service.DeleteAsync(item.Id);
            if (!ok)
            {
                Snackbar.Add("Nie znaleziono rekordu do usunięcia (404).", Severity.Warning);
                return;
            }

            Snackbar.Add("Usunięto.", Severity.Success);
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd usuwania: {ex.Message}", Severity.Error);
        }
    }
}