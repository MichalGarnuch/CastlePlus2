@page "/slowniki/jednostki-miary"
@using MudBlazor
@using CastlePlus2.Client.Services.Slowniki
@using CastlePlus2.Contracts.DTOs.Slowniki
@inject IJednostkiMiaryService Service
@inject ISnackbar Snackbar
@inject IDialogService Dialogs

<MudPaper Class="glass-panel pa-4 pa-sm-6" Elevation="0" Rounded="Rounded.Xl">

    <MudStack Spacing="3">

        <!-- Header -->
        <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
            <MudStack Spacing="0">
                <MudText Typo="Typo.h5" Style="font-weight:800; letter-spacing:.3px;">Jednostki miary</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    Słownik wykorzystywany m.in. w mediach i najmie.
                </MudText>
            </MudStack>

            <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center">
                <MudIconButton Icon="@Icons.Material.Filled.Refresh" OnClick="Reload" />
                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           StartIcon="@Icons.Material.Filled.Add"
                           OnClick="Add">
                    Dodaj
                </MudButton>
            </MudStack>
        </MudStack>

        <!-- Search -->
        <MudTextField @bind-Value="_q"
                      Placeholder="Szukaj po kodzie lub nazwie…"
                      Variant="Variant.Outlined"
                      Margin="Margin.Dense"
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      Immediate="true"
                      Class="mt-1" />

        <!-- Table -->
        <MudTable Items="_filtered"
                  Dense="true"
                  Hover="true"
                  Bordered="true"
                  Breakpoint="Breakpoint.Sm"
                  Loading="_loading">

            <HeaderContent>
                <MudTh>Kod</MudTh>
                <MudTh>Nazwa</MudTh>
                <MudTh Align="Align.Right">Akcje</MudTh>
            </HeaderContent>

            <RowTemplate>
                <MudTd DataLabel="Kod">
                    <MudChip T="string" Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Small">
                        @context.KodJednostki
                    </MudChip>
                </MudTd>

                <MudTd DataLabel="Nazwa">
                    <MudText Typo="Typo.body2" Style="font-weight:600;">@context.Nazwa</MudText>
                </MudTd>

                <MudTd DataLabel="Akcje" Align="Align.Right">
                    <MudIconButton Icon="@Icons.Material.Filled.Edit"
                                   Color="Color.Primary"
                                   OnClick="@(() => Edit(context))" />
                    <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                   Color="Color.Error"
                                   OnClick="@(() => Delete(context))" />
                </MudTd>
            </RowTemplate>

            <NoRecordsContent>
                <MudText Color="Color.Secondary" Class="pa-6">
                    Brak rekordów (albo filtr nic nie znalazł).
                </MudText>
            </NoRecordsContent>

        </MudTable>

    </MudStack>
</MudPaper>

@code {
    private bool _loading;
    private string _q = string.Empty;
    private List<JednostkaMiaryDto> _items = new();

    private IEnumerable<JednostkaMiaryDto> _filtered =>
        string.IsNullOrWhiteSpace(_q)
            ? _items
            : _items.Where(x =>
                (x.KodJednostki?.Contains(_q, StringComparison.OrdinalIgnoreCase) ?? false) ||
                (x.Nazwa?.Contains(_q, StringComparison.OrdinalIgnoreCase) ?? false));

    protected override async Task OnInitializedAsync() => await Reload();

    private async Task Reload()
    {
        _loading = true;
        try
        {
            _items = await Service.GetAllAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd pobierania: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task Add()
    {
        var dlg = await Dialogs.ShowAsync<JednostkaMiaryDialog>("Dodaj jednostkę miary",
            options: new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true });

        var res = await dlg.Result;
        if (!res.Canceled)
        {
            Snackbar.Add("Dodano.", Severity.Success);
            await Reload();
        }
    }

    private async Task Edit(JednostkaMiaryDto item)
    {
        var parameters = new DialogParameters
        {
            ["KodJednostki"] = item.KodJednostki,
            ["Nazwa"] = item.Nazwa
        };

        var dlg = await Dialogs.ShowAsync<JednostkaMiaryDialog>("Edytuj jednostkę miary",
            parameters,
            new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true });

        var res = await dlg.Result;
        if (!res.Canceled)
        {
            Snackbar.Add("Zapisano.", Severity.Success);
            await Reload();
        }
    }

    private async Task Delete(JednostkaMiaryDto item)
    {
        var ok = await Dialogs.ShowMessageBox(
            "Usuń",
            $"Usunąć '{item.KodJednostki}'?",
            yesText: "Usuń",
            cancelText: "Anuluj");

        if (ok == true)
        {
            try
            {
                await Service.DeleteAsync(item.KodJednostki);
                Snackbar.Add("Usunięto.", Severity.Success);
                await Reload();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Błąd usuwania: {ex.Message}", Severity.Error);
            }
        }
    }
}
