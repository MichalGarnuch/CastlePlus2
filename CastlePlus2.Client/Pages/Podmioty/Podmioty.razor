@page "/podmioty/podmioty"
@using MudBlazor
@using CastlePlus2.Contracts.DTOs.Podmioty
@using CastlePlus2.Contracts.Requests.Podmioty
@using CastlePlus2.Client.Services.Podmioty
@inject IPodmiotyService PodmiotyService
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<MudText Typo="Typo.h4" Class="fw-700 mb-4">Podmioty</MudText>

<MudPaper Class="pa-4">
    <MudTable Items="_items"
              Dense="true"
              Hover="true"
              Bordered="true"
              Striped="true"
              Filter="FilterFunc">

        <ToolBarContent>
            <MudText Typo="Typo.h6">Lista</MudText>
            <MudSpacer />

            <MudTextField @bind-Value="_search"
                          Placeholder="Szukaj..."
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search"
                          Immediate="true"
                          Class="mr-4"
                          Margin="Margin.Dense" />

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Add"
                       OnClick="CreateAsync">
                Dodaj
            </MudButton>
        </ToolBarContent>

        <HeaderContent>
            <MudTh>Id</MudTh>
            <MudTh>Nazwa</MudTh>
            <MudTh>Typ</MudTh>
            <MudTh>NIP</MudTh>
            <MudTh>REGON</MudTh>
            <MudTh>PESEL</MudTh>
            <MudTh></MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd DataLabel="Id">@context.IdPodmiotu</MudTd>
            <MudTd DataLabel="Nazwa">@context.Nazwa</MudTd>
            <MudTd DataLabel="Typ">@context.TypPodmiotu</MudTd>
            <MudTd DataLabel="NIP">@context.NIP</MudTd>
            <MudTd DataLabel="REGON">@context.REGON</MudTd>
            <MudTd DataLabel="PESEL">@context.PESEL</MudTd>

            <MudTd DataLabel="Akcje" Class="text-right">
                <MudIconButton Icon="@Icons.Material.Filled.Edit"
                               Color="Color.Primary"
                               Size="Size.Small"
                               OnClick="@(() => EditAsync(context))" />

                <MudIconButton Icon="@Icons.Material.Filled.Delete"
                               Color="Color.Error"
                               Size="Size.Small"
                               OnClick="@(() => DeleteAsync(context))" />
            </MudTd>
        </RowTemplate>

        <NoRecordsContent>
            <MudText Class="pa-4">Brak rekordów.</MudText>
        </NoRecordsContent>

    </MudTable>
</MudPaper>

@code {
    private List<PodmiotDto> _items = new();
    private string _search = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await ReloadAsync();
    }

    private async Task ReloadAsync()
    {
        try
        {
            var data = await PodmiotyService.GetAllAsync();
            _items = (data ?? new List<PodmiotDto>()).ToList();
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd pobierania podmiotów: {ex.Message}", Severity.Error);
        }
    }

    private bool FilterFunc(PodmiotDto item)
    {
        if (string.IsNullOrWhiteSpace(_search))
            return true;

        var s = _search.Trim();

        return item.IdPodmiotu.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || item.Nazwa.Contains(s, StringComparison.OrdinalIgnoreCase)
               || item.TypPodmiotu.Contains(s, StringComparison.OrdinalIgnoreCase)
               || (item.NIP?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || (item.REGON?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || (item.PESEL?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false);
    }

    private async Task CreateAsync()
    {
        var parameters = new DialogParameters
        {
            ["Model"] = new PodmiotDto(),
            ["IsEdit"] = false
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };

        var dialog = await DialogService.ShowAsync<PodmiotDialog>("Dodaj podmiot", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is PodmiotDto model)
        {
            try
            {
                var request = new CreatePodmiotRequest
                {
                    Nazwa = model.Nazwa,
                    TypPodmiotu = model.TypPodmiotu,
                    NIP = model.NIP,
                    REGON = model.REGON,
                    PESEL = model.PESEL
                };

                var newId = await PodmiotyService.CreateAsync(request);
                Snackbar.Add($"Dodano podmiot (Id={newId}).", Severity.Success);
                await ReloadAsync();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Błąd dodawania: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task EditAsync(PodmiotDto item)
    {
        var clone = new PodmiotDto
        {
            IdPodmiotu = item.IdPodmiotu,
            Nazwa = item.Nazwa,
            TypPodmiotu = item.TypPodmiotu,
            NIP = item.NIP,
            REGON = item.REGON,
            PESEL = item.PESEL
        };

        var parameters = new DialogParameters
        {
            ["Model"] = clone,
            ["IsEdit"] = true
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };

        var dialog = await DialogService.ShowAsync<PodmiotDialog>("Edytuj podmiot", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is PodmiotDto model)
        {
            try
            {
                var request = new UpdatePodmiotRequest
                {
                    Nazwa = model.Nazwa,
                    TypPodmiotu = model.TypPodmiotu,
                    NIP = model.NIP,
                    REGON = model.REGON,
                    PESEL = model.PESEL
                };

                var ok = await PodmiotyService.UpdateAsync(model.IdPodmiotu, request);
                if (!ok)
                {
                    Snackbar.Add("Nie znaleziono rekordu do edycji (404).", Severity.Warning);
                    return;
                }

                // natychmiastowa aktualizacja listy w UI
                var idx = _items.FindIndex(x => x.IdPodmiotu == model.IdPodmiotu);
                if (idx >= 0) _items[idx] = model;
                await InvokeAsync(StateHasChanged);

                Snackbar.Add("Zapisano zmiany.", Severity.Success);
                await ReloadAsync();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Błąd zapisu: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task DeleteAsync(PodmiotDto item)
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Usuń",
            $"Czy na pewno usunąć podmiot Id={item.IdPodmiotu}?",
            yesText: "Usuń",
            cancelText: "Anuluj");

        if (confirm != true)
            return;

        try
        {
            var ok = await PodmiotyService.DeleteAsync(item.IdPodmiotu);
            if (!ok)
            {
                Snackbar.Add("Nie znaleziono rekordu do usunięcia (404).", Severity.Warning);
                return;
            }

            Snackbar.Add("Usunięto.", Severity.Success);
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd usuwania: {ex.Message}", Severity.Error);
        }
    }
}
