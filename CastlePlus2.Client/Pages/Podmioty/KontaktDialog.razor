﻿@using MudBlazor
@using CastlePlus2.Contracts.DTOs.Podmioty

<MudDialog>
    <DialogContent>
        <MudForm @ref="_form">

            <MudText Typo="Typo.h6" Class="mb-3">
                @(IsEdit ? "Edycja kontaktu" : "Nowy kontakt")
            </MudText>

            @if (IsEdit)
            {
                <MudTextField Value="@Model.IdKontaktu.ToString()"
                              Label="IdKontaktu"
                              Disabled="true"
                              Margin="Margin.Dense" />
            }

            <MudSelect T="long"
                       Label="Podmiot"
                       @bind-Value="Model.IdPodmiotu"
                       Required="true"
                       RequiredError="Podmiot jest wymagany"
                       Margin="Margin.Dense">
                @foreach (var podmiot in Podmioty)
                {
                    <MudSelectItem T="long" Value="@podmiot.IdPodmiotu">
                        @($"Id={podmiot.IdPodmiotu} / {podmiot.Nazwa}")
                    </MudSelectItem>
                }
            </MudSelect>

            <MudTextField @bind-Value="Model.Rodzaj"
                          Label="Rodzaj"
                          Required="true"
                          RequiredError="Rodzaj jest wymagany"
                          Margin="Margin.Dense" />

            <MudTextField @bind-Value="Model.Wartosc"
                          Label="Wartosc"
                          Required="true"
                          RequiredError="Wartosc jest wymagana"
                          Margin="Margin.Dense" />

        </MudForm>
    </DialogContent>

    <DialogActions>
        <MudButton Variant="Variant.Text" OnClick="Cancel">Anuluj</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="SaveAsync">Zapisz</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public KontaktDto Model { get; set; } = new();
    [Parameter] public List<PodmiotDto> Podmioty { get; set; } = new();
    [Parameter] public bool IsEdit { get; set; }

    private MudForm? _form;

    private void Cancel() => MudDialog.Cancel();

    private async Task SaveAsync()
    {
        if (_form is null) return;

        await _form.Validate();
        if (!_form.IsValid) return;

        Model.Rodzaj = Model.Rodzaj.Trim();
        Model.Wartosc = Model.Wartosc.Trim();

        MudDialog.Close(DialogResult.Ok(Model));
    }
}