@page "/najem/umowy"
@using MudBlazor
@using CastlePlus2.Contracts.DTOs.Najem
@using CastlePlus2.Contracts.DTOs.Podmioty
@using CastlePlus2.Contracts.DTOs.Slowniki
@using CastlePlus2.Contracts.Requests.Najem
@using CastlePlus2.Client.Services.Najem
@using CastlePlus2.Client.Services.Podmioty
@using CastlePlus2.Client.Services.Slowniki
@inject IUmowyNajmuService UmowyNajmuService
@inject IPodmiotyService PodmiotyService
@inject IWalutyService WalutyService
@inject IIndeksacjeService IndeksacjeService
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<MudText Typo="Typo.h4" Class="fw-700 mb-4">Umowy najmu</MudText>

<MudPaper Class="pa-4">
    <MudTable Items="_items"
              Dense="true"
              Hover="true"
              Bordered="true"
              Striped="true"
              Filter="FilterFunc">

        <ToolBarContent>
            <MudText Typo="Typo.h6">Lista</MudText>
            <MudSpacer />

            <MudTextField @bind-Value="_search"
                          Placeholder="Szukaj..."
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search"
                          Immediate="true"
                          Class="mr-4"
                          Margin="Margin.Dense" />

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Add"
                       OnClick="CreateAsync">
                Dodaj
            </MudButton>
        </ToolBarContent>

        <HeaderContent>
            <MudTh>Id</MudTh>
            <MudTh>Wynajmujący</MudTh>
            <MudTh>Najemca</MudTh>
            <MudTh>Data</MudTh>
            <MudTh>Waluta</MudTh>
            <MudTh>Indeksacja</MudTh>
            <MudTh></MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd DataLabel="Id">@context.Id</MudTd>
            <MudTd DataLabel="Wynajmujący">@GetPodmiotLabel(context.IdWynajmujacego)</MudTd>
            <MudTd DataLabel="Najemca">@GetPodmiotLabel(context.IdNajemcy)</MudTd>
            <MudTd DataLabel="Data">
                <MudText Typo="Typo.body2">
                    @($"{context.DataPoczatku:yyyy-MM-dd} → {(context.DataZakonczenia is null ? "bezterminowo" : context.DataZakonczenia.Value.ToString("yyyy-MM-dd"))}")
                </MudText>
            </MudTd>
            <MudTd DataLabel="Waluta">@context.KodWaluty</MudTd>
            <MudTd DataLabel="Indeksacja">@(!string.IsNullOrWhiteSpace(context.KodIndeksacji) ? context.KodIndeksacji : "-")</MudTd>

            <MudTd DataLabel="Akcje" Class="text-right">
                <MudIconButton Icon="@Icons.Material.Filled.Edit"
                               Color="Color.Primary"
                               Size="Size.Small"
                               OnClick="@(() => EditAsync(context))" />

                <MudIconButton Icon="@Icons.Material.Filled.Delete"
                               Color="Color.Error"
                               Size="Size.Small"
                               OnClick="@(() => DeleteAsync(context))" />
            </MudTd>
        </RowTemplate>

        <NoRecordsContent>
            <MudText Class="pa-4">Brak rekordów.</MudText>
        </NoRecordsContent>

    </MudTable>
</MudPaper>

@code {
    private List<UmowaNajmuDto> _items = new();
    private string _search = string.Empty;

    private List<PodmiotDto> _podmioty = new();
    private List<WalutaDto> _waluty = new();
    private List<IndeksacjaDto> _indeksacje = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadLookupsAsync();
        await ReloadAsync();
    }

    private async Task LoadLookupsAsync()
    {
        try
        {
            _podmioty = (await PodmiotyService.GetAllAsync()) ?? new();
            _waluty = (await WalutyService.GetAllAsync()) ?? new();
            _indeksacje = (await IndeksacjeService.GetAllAsync()) ?? new();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd pobierania słowników: {ex.Message}", Severity.Error);
            _podmioty = new();
            _waluty = new();
            _indeksacje = new();
        }
    }

    private async Task ReloadAsync()
    {
        try
        {
            _items = (await UmowyNajmuService.GetAllAsync()) ?? new();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd pobierania umów: {ex.Message}", Severity.Error);
            _items = new();
        }
    }

    private string GetPodmiotLabel(long idPodmiotu)
    {
        var p = _podmioty.FirstOrDefault(x => x.IdPodmiotu == idPodmiotu);
        if (p is null) return idPodmiotu.ToString();

        return string.IsNullOrWhiteSpace(p.Nazwa) ? idPodmiotu.ToString() : p.Nazwa;
    }

    private bool FilterFunc(UmowaNajmuDto item)
    {
        if (string.IsNullOrWhiteSpace(_search))
            return true;

        var s = _search.Trim();

        return item.Id.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || GetPodmiotLabel(item.IdWynajmujacego).Contains(s, StringComparison.OrdinalIgnoreCase)
               || GetPodmiotLabel(item.IdNajemcy).Contains(s, StringComparison.OrdinalIgnoreCase)
               || (item.KodWaluty?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || (item.KodIndeksacji?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false);
    }

    private async Task CreateAsync()
    {
        var parameters = new DialogParameters
        {
            ["Model"] = new UmowaNajmuDto(),
            ["IsEdit"] = false,
            ["Podmioty"] = _podmioty,
            ["Waluty"] = _waluty,
            ["Indeksacje"] = _indeksacje
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };
        var dialog = await DialogService.ShowAsync<UmowaNajmuDialog>("Dodaj umowę najmu", parameters, options);
        var result = await dialog.Result;

        if (result.Canceled) return;
        if (result.Data is not UmowaNajmuDto model) return;

        try
        {
            var request = new CreateUmowaNajmuRequest
            {
                IdWynajmujacego = model.IdWynajmujacego,
                IdNajemcy = model.IdNajemcy,
                DataZawarcia = model.DataZawarcia,
                DataPoczatku = model.DataPoczatku,
                DataZakonczenia = model.DataZakonczenia,
                KodWaluty = model.KodWaluty,
                KodIndeksacji = model.KodIndeksacji
            };

            var newId = await UmowyNajmuService.CreateAsync(request);
            Snackbar.Add($"Dodano umowę (Id={newId}).", Severity.Success);
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd dodawania: {ex.Message}", Severity.Error);
        }
    }

    private async Task EditAsync(UmowaNajmuDto item)
    {
        var clone = new UmowaNajmuDto
        {
            Id = item.Id,
            IdWynajmujacego = item.IdWynajmujacego,
            IdNajemcy = item.IdNajemcy,
            DataZawarcia = item.DataZawarcia,
            DataPoczatku = item.DataPoczatku,
            DataZakonczenia = item.DataZakonczenia,
            KodWaluty = item.KodWaluty,
            KodIndeksacji = item.KodIndeksacji
        };

        var parameters = new DialogParameters
        {
            ["Model"] = clone,
            ["IsEdit"] = true,
            ["Podmioty"] = _podmioty,
            ["Waluty"] = _waluty,
            ["Indeksacje"] = _indeksacje
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };
        var dialog = await DialogService.ShowAsync<UmowaNajmuDialog>("Edytuj umowę najmu", parameters, options);
        var result = await dialog.Result;

        if (result.Canceled) return;
        if (result.Data is not UmowaNajmuDto model) return;

        try
        {
            var request = new UpdateUmowaNajmuRequest
            {
                IdWynajmujacego = model.IdWynajmujacego,
                IdNajemcy = model.IdNajemcy,
                DataZawarcia = model.DataZawarcia,
                DataPoczatku = model.DataPoczatku,
                DataZakonczenia = model.DataZakonczenia,
                KodWaluty = model.KodWaluty,
                KodIndeksacji = model.KodIndeksacji
            };

            var ok = await UmowyNajmuService.UpdateAsync(model.Id, request);
            if (!ok)
            {
                Snackbar.Add("Nie znaleziono rekordu do edycji (404).", Severity.Warning);
                return;
            }

            Snackbar.Add("Zapisano zmiany.", Severity.Success);
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd zapisu: {ex.Message}", Severity.Error);
        }
    }

    private async Task DeleteAsync(UmowaNajmuDto item)
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Usuń",
            $"Czy na pewno usunąć umowę Id={item.Id}?",
            yesText: "Usuń",
            cancelText: "Anuluj");

        if (confirm != true)
            return;

        try
        {
            var ok = await UmowyNajmuService.DeleteAsync(item.Id);
            if (!ok)
            {
                Snackbar.Add("Nie znaleziono rekordu do usunięcia (404).", Severity.Warning);
                return;
            }

            Snackbar.Add("Usunięto.", Severity.Success);
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd usuwania: {ex.Message}", Severity.Error);
        }
    }
}