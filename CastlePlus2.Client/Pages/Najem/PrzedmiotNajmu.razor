@page "/najem/przedmioty-najmu"
@using MudBlazor
@using CastlePlus2.Contracts.DTOs.Najem
@using CastlePlus2.Contracts.Requests.Najem
@using CastlePlus2.Client.Services.Najem
@inject IPrzedmiotyNajmuService PrzedmiotyNajmuService
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<MudText Typo="Typo.h4" Class="fw-700 mb-4">Przedmioty najmu</MudText>

<MudPaper Class="pa-4">
    <MudTable Items="_items"
              Dense="true"
              Hover="true"
              Bordered="true"
              Striped="true"
              Filter="FilterFunc">

        <ToolBarContent>
            <MudText Typo="Typo.h6">Lista</MudText>
            <MudSpacer />

            <MudTextField @bind-Value="_search"
                          Placeholder="Szukaj..."
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search"
                          Immediate="true"
                          Class="mr-4"
                          Margin="Margin.Dense" />

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Add"
                       OnClick="CreateAsync">
                Dodaj
            </MudButton>
        </ToolBarContent>

        <HeaderContent>
            <MudTh>Id</MudTh>
            <MudTh>IdUmowyNajmu</MudTh>
            <MudTh>IdEncji</MudTh>
            <MudTh>Udział %</MudTh>
            <MudTh>Od dnia</MudTh>
            <MudTh>Do dnia</MudTh>
            <MudTh></MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd DataLabel="Id">@context.IdPrzedmiotuNajmu</MudTd>
            <MudTd DataLabel="IdUmowyNajmu">@context.IdUmowyNajmu</MudTd>
            <MudTd DataLabel="IdEncji">@context.IdEncji</MudTd>
            <MudTd DataLabel="Udział %">@(context.UdzialProcent is null ? "-" : context.UdzialProcent)</MudTd>
            <MudTd DataLabel="Od dnia">@context.OdDnia.ToString("yyyy-MM-dd")</MudTd>
            <MudTd DataLabel="Do dnia">@(context.DoDnia is null ? "-" : context.DoDnia.Value.ToString("yyyy-MM-dd"))</MudTd>

            <MudTd DataLabel="Akcje" Class="text-right">
                <MudIconButton Icon="@Icons.Material.Filled.Edit"
                               Color="Color.Primary"
                               Size="Size.Small"
                               OnClick="@(() => EditAsync(context))" />

                <MudIconButton Icon="@Icons.Material.Filled.Delete"
                               Color="Color.Error"
                               Size="Size.Small"
                               OnClick="@(() => DeleteAsync(context))" />
            </MudTd>
        </RowTemplate>

        <NoRecordsContent>
            <MudText Class="pa-4">Brak rekordów.</MudText>
        </NoRecordsContent>

    </MudTable>
</MudPaper>

@code {
    private List<PrzedmiotNajmuDto> _items = new();
    private string _search = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await ReloadAsync();
    }

    private async Task ReloadAsync()
    {
        try
        {
            var data = await PrzedmiotyNajmuService.GetAllAsync();
            _items = (data ?? new List<PrzedmiotNajmuDto>()).ToList();
            await InvokeAsync(StateHasChanged);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd pobierania przedmiotów najmu: {ex.Message}", Severity.Error);
        }
    }

    private bool FilterFunc(PrzedmiotNajmuDto item)
    {
        if (string.IsNullOrWhiteSpace(_search))
            return true;

        var s = _search.Trim();

        return item.IdPrzedmiotuNajmu.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || item.IdUmowyNajmu.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || item.IdEncji.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || (item.UdzialProcent?.ToString() ?? string.Empty).Contains(s, StringComparison.OrdinalIgnoreCase);
    }

    private async Task CreateAsync()
    {
        var model = new PrzedmiotNajmuDto
        {
            OdDnia = DateOnly.FromDateTime(DateTime.Today)
        };

        var parameters = new DialogParameters
        {
            ["Model"] = model,
            ["IsEdit"] = false
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };

        var dialog = await DialogService.ShowAsync<PrzedmiotNajmuDialog>("Dodaj przedmiot najmu", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is PrzedmiotNajmuDto dto)
        {
            try
            {
                var request = new CreatePrzedmiotNajmuRequest
                {
                    IdUmowyNajmu = dto.IdUmowyNajmu,
                    IdEncji = dto.IdEncji,
                    UdzialProcent = dto.UdzialProcent,
                    OdDnia = dto.OdDnia,
                    DoDnia = dto.DoDnia
                };

                var created = await PrzedmiotyNajmuService.CreateAsync(request);
                Snackbar.Add($"Dodano przedmiot najmu (Id={created.IdPrzedmiotuNajmu}).", Severity.Success);
                await ReloadAsync();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Błąd dodawania: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task EditAsync(PrzedmiotNajmuDto item)
    {
        var clone = new PrzedmiotNajmuDto
        {
            IdPrzedmiotuNajmu = item.IdPrzedmiotuNajmu,
            IdUmowyNajmu = item.IdUmowyNajmu,
            IdEncji = item.IdEncji,
            UdzialProcent = item.UdzialProcent,
            OdDnia = item.OdDnia,
            DoDnia = item.DoDnia
        };

        var parameters = new DialogParameters
        {
            ["Model"] = clone,
            ["IsEdit"] = true
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };

        var dialog = await DialogService.ShowAsync<PrzedmiotNajmuDialog>("Edytuj przedmiot najmu", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is PrzedmiotNajmuDto dto)
        {
            try
            {
                var request = new UpdatePrzedmiotNajmuRequest
                {
                    IdUmowyNajmu = dto.IdUmowyNajmu,
                    IdEncji = dto.IdEncji,
                    UdzialProcent = dto.UdzialProcent,
                    OdDnia = dto.OdDnia,
                    DoDnia = dto.DoDnia
                };

                var updated = await PrzedmiotyNajmuService.UpdateAsync(dto.IdPrzedmiotuNajmu, request);
                if (updated is null)
                {
                    Snackbar.Add("Nie znaleziono rekordu do edycji (404).", Severity.Warning);
                    return;
                }

                var idx = _items.FindIndex(x => x.IdPrzedmiotuNajmu == dto.IdPrzedmiotuNajmu);
                if (idx >= 0) _items[idx] = dto;
                await InvokeAsync(StateHasChanged);

                Snackbar.Add("Zapisano zmiany.", Severity.Success);
                await ReloadAsync();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Błąd zapisu: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task DeleteAsync(PrzedmiotNajmuDto item)
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Usuń",
            $"Czy na pewno usunąć przedmiot najmu Id={item.IdPrzedmiotuNajmu}?",
            yesText: "Usuń",
            cancelText: "Anuluj");

        if (confirm != true)
            return;

        try
        {
            var ok = await PrzedmiotyNajmuService.DeleteAsync(item.IdPrzedmiotuNajmu);
            if (!ok)
            {
                Snackbar.Add("Nie znaleziono rekordu do usunięcia (404).", Severity.Warning);
                return;
            }

            Snackbar.Add("Usunięto.", Severity.Success);
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd usuwania: {ex.Message}", Severity.Error);
        }
    }
}