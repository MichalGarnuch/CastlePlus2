@page "/najem/skladniki-czynszu"
@using MudBlazor
@using CastlePlus2.Contracts.DTOs.Najem
@using CastlePlus2.Contracts.DTOs.Slowniki
@using CastlePlus2.Contracts.Requests.Najem
@using CastlePlus2.Client.Services.Najem
@using CastlePlus2.Client.Services.Slowniki
@inject ISkladnikiCzynszuService SkladnikiCzynszuService
@inject IUmowyNajmuService UmowyNajmuService
@inject IJednostkiMiaryService JednostkiMiaryService
@inject IIndeksacjeService IndeksacjeService
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<MudText Typo="Typo.h4" Class="fw-700 mb-4">Składniki czynszu</MudText>

<MudPaper Class="pa-4">
    <MudTable Items="_items"
              Dense="true"
              Hover="true"
              Bordered="true"
              Striped="true"
              Filter="FilterFunc">

        <ToolBarContent>
            <MudText Typo="Typo.h6">Lista</MudText>
            <MudSpacer />

            <MudTextField @bind-Value="_search"
                          Placeholder="Szukaj..."
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search"
                          Immediate="true"
                          Class="mr-4"
                          Margin="Margin.Dense" />

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Add"
                       OnClick="CreateAsync">
                Dodaj
            </MudButton>
        </ToolBarContent>

        <HeaderContent>
            <MudTh>Id</MudTh>
            <MudTh>Umowa</MudTh>
            <MudTh>Nazwa</MudTh>
            <MudTh>Jednostka</MudTh>
            <MudTh>Stawka</MudTh>
            <MudTh>Ilość bazowa</MudTh>
            <MudTh>Indeksacja</MudTh>
            <MudTh>Od dnia</MudTh>
            <MudTh>Do dnia</MudTh>
            <MudTh></MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd DataLabel="Id">@context.IdSkladnikaCzynszu</MudTd>
            <MudTd DataLabel="Umowa">@GetUmowaLabel(context.IdUmowyNajmu)</MudTd>
            <MudTd DataLabel="Nazwa">@context.Nazwa</MudTd>
            <MudTd DataLabel="Jednostka">@GetJednostkaLabel(context.KodJednostki)</MudTd>
            <MudTd DataLabel="Stawka">@context.Stawka</MudTd>
            <MudTd DataLabel="Ilość bazowa">@(context.IloscBazowa?.ToString() ?? "-")</MudTd>
            <MudTd DataLabel="Indeksacja">@GetIndeksacjaLabel(context.KodIndeksacji)</MudTd>
            <MudTd DataLabel="Od dnia">@context.OdDnia.ToString("yyyy-MM-dd")</MudTd>
            <MudTd DataLabel="Do dnia">@(context.DoDnia is null ? "-" : context.DoDnia.Value.ToString("yyyy-MM-dd"))</MudTd>

            <MudTd DataLabel="Akcje" Class="text-right">
                <MudIconButton Icon="@Icons.Material.Filled.Edit"
                               Color="Color.Primary"
                               Size="Size.Small"
                               OnClick="@(() => EditAsync(context))" />

                <MudIconButton Icon="@Icons.Material.Filled.Delete"
                               Color="Color.Error"
                               Size="Size.Small"
                               OnClick="@(() => DeleteAsync(context))" />
            </MudTd>
        </RowTemplate>

        <NoRecordsContent>
            <MudText Class="pa-4">Brak rekordów.</MudText>
        </NoRecordsContent>

    </MudTable>
</MudPaper>

@code {
    private List<SkladnikCzynszuDto> _items = new();
    private List<UmowaNajmuDto> _umowy = new();
    private List<JednostkaMiaryDto> _jednostki = new();
    private List<IndeksacjaDto> _indeksacje = new();
    private string _search = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await ReloadAsync();
    }

    private async Task ReloadAsync()
    {
        try
        {
            _umowy = await UmowyNajmuService.GetAllAsync();
            _jednostki = await JednostkiMiaryService.GetAllAsync();
            _indeksacje = await IndeksacjeService.GetAllAsync();
            _items = await SkladnikiCzynszuService.GetAllAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd pobierania danych: {ex.Message}", Severity.Error);
        }
    }

    private string GetUmowaLabel(Guid id)
    {
        var umowa = _umowy.FirstOrDefault(x => x.Id == id);
        return umowa is null ? $"IdUmowyNajmu={id}" : $"{umowa.NumerUmowy} (Id={id})";
    }

    private string GetJednostkaLabel(string kodJednostki)
    {
        var jednostka = _jednostki.FirstOrDefault(x => x.KodJednostki == kodJednostki);
        return jednostka is null ? kodJednostki : $"{jednostka.Nazwa} ({jednostka.KodJednostki})";
    }

    private string GetIndeksacjaLabel(string? kodIndeksacji)
    {
        if (string.IsNullOrWhiteSpace(kodIndeksacji))
            return "-";

        var indeksacja = _indeksacje.FirstOrDefault(x => x.KodIndeksacji == kodIndeksacji);
        return indeksacja is null ? kodIndeksacji : $"{indeksacja.Nazwa} ({indeksacja.KodIndeksacji})";
    }

    private bool FilterFunc(SkladnikCzynszuDto item)
    {
        if (string.IsNullOrWhiteSpace(_search))
            return true;

        var s = _search.Trim();

        return item.IdSkladnikaCzynszu.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || item.IdUmowyNajmu.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || item.Nazwa.Contains(s, StringComparison.OrdinalIgnoreCase)
               || item.KodJednostki.Contains(s, StringComparison.OrdinalIgnoreCase)
               || item.Stawka.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || (item.IloscBazowa?.ToString().Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || (item.KodIndeksacji?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || item.OdDnia.ToString("yyyy-MM-dd").Contains(s, StringComparison.OrdinalIgnoreCase)
               || (item.DoDnia?.ToString("yyyy-MM-dd").Contains(s, StringComparison.OrdinalIgnoreCase) ?? false);
    }

    private async Task CreateAsync()
    {
        var model = new SkladnikCzynszuDto
        {
            OdDnia = DateOnly.FromDateTime(DateTime.Today)
        };

        var parameters = new DialogParameters
        {
            ["Model"] = model,
            ["UmowyNajmu"] = _umowy,
            ["Jednostki"] = _jednostki,
            ["Indeksacje"] = _indeksacje,
            ["IsEdit"] = false
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };
        var dialog = DialogService.Show<SkladnikiCzynszuDialog>("Dodaj składnik czynszu", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is SkladnikCzynszuDto dto)
        {
            try
            {
                await SkladnikiCzynszuService.CreateAsync(new CreateSkladnikCzynszuRequest
                {
                    IdUmowyNajmu = dto.IdUmowyNajmu,
                    Nazwa = dto.Nazwa,
                    KodJednostki = dto.KodJednostki,
                    Stawka = dto.Stawka,
                    IloscBazowa = dto.IloscBazowa,
                    KodIndeksacji = dto.KodIndeksacji,
                    OdDnia = dto.OdDnia,
                    DoDnia = dto.DoDnia
                });

                Snackbar.Add("Dodano składnik czynszu.", Severity.Success);
                await ReloadAsync();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Błąd dodawania: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task EditAsync(SkladnikCzynszuDto item)
    {
        var clone = new SkladnikCzynszuDto
        {
            IdSkladnikaCzynszu = item.IdSkladnikaCzynszu,
            IdUmowyNajmu = item.IdUmowyNajmu,
            Nazwa = item.Nazwa,
            KodJednostki = item.KodJednostki,
            Stawka = item.Stawka,
            IloscBazowa = item.IloscBazowa,
            KodIndeksacji = item.KodIndeksacji,
            OdDnia = item.OdDnia,
            DoDnia = item.DoDnia
        };

        var parameters = new DialogParameters
        {
            ["Model"] = clone,
            ["UmowyNajmu"] = _umowy,
            ["Jednostki"] = _jednostki,
            ["Indeksacje"] = _indeksacje,
            ["IsEdit"] = true
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };
        var dialog = DialogService.Show<SkladnikiCzynszuDialog>("Edytuj składnik czynszu", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is SkladnikCzynszuDto dto)
        {
            try
            {
                var updated = await SkladnikiCzynszuService.UpdateAsync(dto.IdSkladnikaCzynszu, new UpdateSkladnikCzynszuRequest
                {
                    IdUmowyNajmu = dto.IdUmowyNajmu,
                    Nazwa = dto.Nazwa,
                    KodJednostki = dto.KodJednostki,
                    Stawka = dto.Stawka,
                    IloscBazowa = dto.IloscBazowa,
                    KodIndeksacji = dto.KodIndeksacji,
                    OdDnia = dto.OdDnia,
                    DoDnia = dto.DoDnia
                });

                if (updated is null)
                {
                    Snackbar.Add("Nie znaleziono rekordu do aktualizacji.", Severity.Warning);
                    return;
                }

                Snackbar.Add("Zapisano zmiany.", Severity.Success);
                await ReloadAsync();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Błąd zapisu: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task DeleteAsync(SkladnikCzynszuDto item)
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Usuń",
            $"Czy na pewno usunąć składnik czynszu Id={item.IdSkladnikaCzynszu}?",
            yesText: "Usuń",
            cancelText: "Anuluj");

        if (confirm != true)
            return;

        try
        {
            var ok = await SkladnikiCzynszuService.DeleteAsync(item.IdSkladnikaCzynszu);
            if (!ok)
            {
                Snackbar.Add("Nie znaleziono rekordu do usunięcia.", Severity.Warning);
                return;
            }

            Snackbar.Add("Usunięto.", Severity.Success);
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd usuwania: {ex.Message}", Severity.Error);
        }
    }
}