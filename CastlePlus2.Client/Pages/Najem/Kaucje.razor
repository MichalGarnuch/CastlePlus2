@page "/najem/kaucje"

@using MudBlazor
@using CastlePlus2.Contracts.DTOs.Najem
@using CastlePlus2.Contracts.Requests.Najem
@using CastlePlus2.Client.Services.Najem

@inject IKaucjeService KaucjeService
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<MudText Typo="Typo.h4" Class="fw-700 mb-4">Kaucje</MudText>

<MudPaper Class="pa-4">
    <MudTable Items="_items"
              Dense="true"
              Hover="true"
              Bordered="true"
              Striped="true"
              Filter="FilterFunc">

        <ToolBarContent>
            <MudText Typo="Typo.h6">Lista</MudText>
            <MudSpacer />

            <MudTextField @bind-Value="_search"
                          Placeholder="Szukaj..."
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search"
                          Immediate="true"
                          Class="mr-4"
                          Margin="Margin.Dense" />

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Add"
                       OnClick="CreateAsync">
                Dodaj
            </MudButton>
        </ToolBarContent>

        <HeaderContent>
            <MudTh>Id</MudTh>
            <MudTh>Umowa</MudTh>
            <MudTh>Rodzaj</MudTh>
            <MudTh class="text-right">Kwota</MudTh>
            <MudTh>Waluta</MudTh>
            <MudTh>Data operacji</MudTh>
            <MudTh></MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd DataLabel="Id">@context.IdOperacjiKaucji</MudTd>
            <MudTd DataLabel="Umowa">@context.IdUmowyNajmu</MudTd>
            <MudTd DataLabel="Rodzaj">@context.RodzajOperacji</MudTd>
            <MudTd DataLabel="Kwota" Class="text-right">@context.Kwota.ToString("0.00")</MudTd>
            <MudTd DataLabel="Waluta">@context.KodWaluty</MudTd>
            <MudTd DataLabel="Data operacji">@context.DataOperacji.ToString("yyyy-MM-dd")</MudTd>
            <MudTd DataLabel="Akcje" Class="text-right">
                <MudIconButton Icon="@Icons.Material.Filled.Edit"
                               Color="Color.Primary"
                               Size="Size.Small"
                               OnClick="@(() => EditAsync(context))" />

                <MudIconButton Icon="@Icons.Material.Filled.Delete"
                               Color="Color.Error"
                               Size="Size.Small"
                               OnClick="@(() => DeleteAsync(context))" />
            </MudTd>
        </RowTemplate>

        <NoRecordsContent>
            <MudText Class="pa-4">Brak rekordów.</MudText>
        </NoRecordsContent>

    </MudTable>
</MudPaper>

@code {
    private List<KaucjaDto> _items = new();
    private string _search = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await ReloadAsync();
    }

    private async Task ReloadAsync()
    {
        try
        {
            _items = await KaucjeService.GetAllAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd pobierania kaucji: {ex.Message}", Severity.Error);
        }
    }

    private bool FilterFunc(KaucjaDto item)
    {
        if (string.IsNullOrWhiteSpace(_search))
            return true;

        var s = _search.Trim();

        return item.IdOperacjiKaucji.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || item.IdUmowyNajmu.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || (item.RodzajOperacji?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || item.Kwota.ToString("0.00").Contains(s, StringComparison.OrdinalIgnoreCase)
               || (item.KodWaluty?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || item.DataOperacji.ToString("yyyy-MM-dd").Contains(s, StringComparison.OrdinalIgnoreCase);
    }

    private async Task CreateAsync()
    {
        var model = new KaucjaDto
        {
            DataOperacji = DateOnly.FromDateTime(DateTime.Today),
            KodWaluty = "PLN",
            RodzajOperacji = "Wpłata"
        };

        var parameters = new DialogParameters
        {
            ["Model"] = model,
            ["IsEdit"] = false
        };

        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = DialogService.Show<KaucjaDialog>("Nowa kaucja", parameters, options);
        var result = await dialog.Result;

        if (result.Canceled || result.Data is not KaucjaDto dto)
            return;

        try
        {
            var created = await KaucjeService.CreateAsync(new CreateKaucjaRequest
            {
                IdUmowyNajmu = dto.IdUmowyNajmu,
                RodzajOperacji = dto.RodzajOperacji,
                Kwota = dto.Kwota,
                KodWaluty = dto.KodWaluty,
                DataOperacji = dto.DataOperacji
            });

            _items.Insert(0, created);
            Snackbar.Add("Dodano kaucję.", Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd dodawania kaucji: {ex.Message}", Severity.Error);
        }
    }

    private async Task EditAsync(KaucjaDto item)
    {
        var clone = new KaucjaDto
        {
            IdOperacjiKaucji = item.IdOperacjiKaucji,
            IdUmowyNajmu = item.IdUmowyNajmu,
            RodzajOperacji = item.RodzajOperacji,
            Kwota = item.Kwota,
            KodWaluty = item.KodWaluty,
            DataOperacji = item.DataOperacji
        };

        var parameters = new DialogParameters
        {
            ["Model"] = clone,
            ["IsEdit"] = true
        };

        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = DialogService.Show<KaucjaDialog>("Edycja kaucji", parameters, options);
        var result = await dialog.Result;

        if (result.Canceled || result.Data is not KaucjaDto dto)
            return;

        try
        {
            var updated = await KaucjeService.UpdateAsync(item.IdOperacjiKaucji, new UpdateKaucjaRequest
            {
                IdUmowyNajmu = dto.IdUmowyNajmu,
                RodzajOperacji = dto.RodzajOperacji,
                Kwota = dto.Kwota,
                KodWaluty = dto.KodWaluty,
                DataOperacji = dto.DataOperacji
            });

            if (updated is null)
            {
                Snackbar.Add("Rekord nie istnieje (404).", Severity.Warning);
                await ReloadAsync();
                return;
            }

            var idx = _items.FindIndex(x => x.IdOperacjiKaucji == updated.IdOperacjiKaucji);
            if (idx >= 0) _items[idx] = updated;

            Snackbar.Add("Zapisano zmiany.", Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd zapisu: {ex.Message}", Severity.Error);
        }
    }

    private async Task DeleteAsync(KaucjaDto item)
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Usuń",
            $"Czy na pewno usunąć kaucję Id={item.IdOperacjiKaucji}?",
            yesText: "Usuń",
            cancelText: "Anuluj");

        if (confirm != true)
            return;

        try
        {
            var ok = await KaucjeService.DeleteAsync(item.IdOperacjiKaucji);
            if (!ok)
            {
                Snackbar.Add("Rekord nie istnieje (404).", Severity.Warning);
                await ReloadAsync();
                return;
            }

            _items.RemoveAll(x => x.IdOperacjiKaucji == item.IdOperacjiKaucji);
            Snackbar.Add("Usunięto kaucję.", Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd usuwania: {ex.Message}", Severity.Error);
        }
    }
}