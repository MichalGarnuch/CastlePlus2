@using MudBlazor
@using CastlePlus2.Contracts.DTOs.Finanse

<MudDialog>
    <DialogContent>
        <MudForm @ref="_form">
            <MudText Typo="Typo.h6" Class="mb-3">
                @(_isEdit ? "Edycja kategorii kosztu" : "Nowa kategoria kosztu")
            </MudText>

            <MudGrid Spacing="2">
                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.Kod"
                                  Label="Kod"
                                  Dense="true"
                                  Required="true"
                                  RequiredError="Kod jest wymagany"
                                  Immediate="true"
                                  MaxLength="20" />
                </MudItem>

                <MudItem xs="12">
                    <MudTextField @bind-Value="Model.Nazwa"
                                  Label="Nazwa"
                                  Dense="true"
                                  Required="true"
                                  RequiredError="Nazwa jest wymagana"
                                  Immediate="true"
                                  MaxLength="100" />
                </MudItem>

                @if (_isEdit)
                {
                    <MudItem xs="12">
                        <MudText Typo="Typo.caption" Color="Color.Secondary">
                            IdKategoriiKosztu: @Model.IdKategoriiKosztu
                        </MudText>
                    </MudItem>
                }
            </MudGrid>
        </MudForm>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel">Anuluj</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="SaveAsync">Zapisz</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public KategoriaKosztuDto Model { get; set; } = new();
    [Parameter] public bool IsEdit { get; set; }

    private MudForm? _form;
    private bool _isEdit => IsEdit;

    private void Cancel() => MudDialog.Cancel();

    private async Task SaveAsync()
    {
        if (_form is null)
            return;

        await _form.Validate();
        if (!_form.IsValid)
            return;

        Model.Kod = (Model.Kod ?? string.Empty).Trim();
        Model.Nazwa = (Model.Nazwa ?? string.Empty).Trim();

        MudDialog.Close(DialogResult.Ok(Model));
    }
}
