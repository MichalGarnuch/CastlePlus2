@page "/finanse/alokacje-kosztow"
@using MudBlazor
@using CastlePlus2.Contracts.DTOs.Finanse
@using CastlePlus2.Contracts.Requests.Finanse
@using CastlePlus2.Client.Services.Finanse
@inject IAlokacjeKosztowService Service
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<MudText Typo="Typo.h4" Class="fw-700 mb-4">Alokacje kosztów</MudText>

<MudPaper Class="pa-4">
    <MudTable Items="_items"
              Dense="true"
              Hover="true"
              Bordered="true"
              Striped="true"
              Filter="FilterFunc">

        <ToolBarContent>
            <MudText Typo="Typo.h6">Lista</MudText>
            <MudSpacer />

            <MudTextField @bind-Value="_search"
                          Placeholder="Szukaj..."
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search"
                          Immediate="true"
                          Class="mr-4"
                          Margin="Margin.Dense" />

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Add"
                       OnClick="CreateAsync">
                Dodaj
            </MudButton>
        </ToolBarContent>

        <HeaderContent>
            <MudTh>Id</MudTh>
            <MudTh>IdPozycjiKosztu</MudTh>
            <MudTh>IdEncji</MudTh>
            <MudTh>Netto</MudTh>
            <MudTh>Brutto</MudTh>
            <MudTh></MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd DataLabel="Id">@context.IdAlokacji</MudTd>
            <MudTd DataLabel="IdPozycjiKosztu">@context.IdPozycjiKosztu</MudTd>
            <MudTd DataLabel="IdEncji">@context.IdEncji</MudTd>
            <MudTd DataLabel="Netto">@context.KwotaNetto</MudTd>
            <MudTd DataLabel="Brutto">@context.KwotaBrutto</MudTd>

            <MudTd Class="text-right">
                <MudIconButton Icon="@Icons.Material.Filled.Edit"
                               Color="Color.Primary"
                               Size="Size.Small"
                               OnClick="@(() => EditAsync(context))" />

                <MudIconButton Icon="@Icons.Material.Filled.Delete"
                               Color="Color.Error"
                               Size="Size.Small"
                               OnClick="@(() => DeleteAsync(context))" />
            </MudTd>
        </RowTemplate>

        <NoRecordsContent>
            <MudText Class="pa-4">Brak rekordów.</MudText>
        </NoRecordsContent>
    </MudTable>
</MudPaper>

@code {
    private List<AlokacjaKosztuDto> _items = new();
    private string _search = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await ReloadAsync();
    }

    private async Task ReloadAsync()
    {
        try
        {
            _items = (await Service.GetAllAsync()).ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd pobierania alokacji: {ex.Message}", Severity.Error);
        }
    }

    private bool FilterFunc(AlokacjaKosztuDto item)
    {
        if (string.IsNullOrWhiteSpace(_search))
            return true;

        var s = _search.Trim();

        return item.IdAlokacji.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || item.IdPozycjiKosztu.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || item.IdEncji.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || item.KwotaNetto.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || item.KwotaBrutto.ToString().Contains(s, StringComparison.OrdinalIgnoreCase);
    }

    private async Task CreateAsync()
    {
        var model = new AlokacjaKosztuDto();

        var parameters = new DialogParameters
        {
            ["Model"] = model,
            ["IsEdit"] = false
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };
        var dialog = DialogService.Show<AlokacjaKosztuDialog>("Dodaj alokację kosztu", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is AlokacjaKosztuDto m)
        {
            try
            {
                var created = await Service.CreateAsync(new CreateAlokacjaKosztuRequest
                {
                    IdPozycjiKosztu = m.IdPozycjiKosztu,
                    IdEncji = m.IdEncji,
                    KwotaNetto = m.KwotaNetto,
                    KwotaBrutto = m.KwotaBrutto
                });

                Snackbar.Add($"Dodano alokację (Id={created.IdAlokacji}).", Severity.Success);
                await ReloadAsync();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Błąd dodawania: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task EditAsync(AlokacjaKosztuDto item)
    {
        var clone = new AlokacjaKosztuDto
        {
            IdAlokacji = item.IdAlokacji,
            IdPozycjiKosztu = item.IdPozycjiKosztu,
            IdEncji = item.IdEncji,
            KwotaNetto = item.KwotaNetto,
            KwotaBrutto = item.KwotaBrutto
        };

        var parameters = new DialogParameters
        {
            ["Model"] = clone,
            ["IsEdit"] = true
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };
        var dialog = DialogService.Show<AlokacjaKosztuDialog>("Edytuj alokację kosztu", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is AlokacjaKosztuDto m)
        {
            try
            {
                var ok = await Service.UpdateAsync(m.IdAlokacji, new UpdateAlokacjaKosztuRequest
                {
                    IdPozycjiKosztu = m.IdPozycjiKosztu,
                    IdEncji = m.IdEncji,
                    KwotaNetto = m.KwotaNetto,
                    KwotaBrutto = m.KwotaBrutto
                });

                if (!ok)
                {
                    Snackbar.Add("Nie znaleziono rekordu (404).", Severity.Warning);
                    return;
                }

                Snackbar.Add("Zapisano zmiany.", Severity.Success);
                await ReloadAsync();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Błąd zapisu: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task DeleteAsync(AlokacjaKosztuDto item)
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Usuń",
            $"Czy na pewno usunąć alokację Id={item.IdAlokacji}?",
            yesText: "Usuń",
            cancelText: "Anuluj");

        if (confirm != true)
            return;

        try
        {
            var ok = await Service.DeleteAsync(item.IdAlokacji);
            if (!ok)
            {
                Snackbar.Add("Nie znaleziono rekordu (404).", Severity.Warning);
                return;
            }

            Snackbar.Add("Usunięto.", Severity.Success);
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd usuwania: {ex.Message}", Severity.Error);
        }
    }
}
