@page "/finanse/faktury"

@using MudBlazor
@using CastlePlus2.Contracts.DTOs.Finanse
@using CastlePlus2.Contracts.DTOs.Podmioty
@using CastlePlus2.Contracts.DTOs.Slowniki
@using CastlePlus2.Contracts.Requests.Finanse
@using CastlePlus2.Client.Services.Finanse
@using CastlePlus2.Client.Services.Podmioty
@using CastlePlus2.Client.Services.Slowniki

@inject IFakturyService FakturyService
@inject IPodmiotyService PodmiotyService
@inject IWalutyService WalutyService
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<MudText Typo="Typo.h4" Class="fw-700 mb-4">Faktury</MudText>

<MudPaper Class="pa-4">
    <MudTable Items="_items"
              Dense="true"
              Hover="true"
              Bordered="true"
              Striped="true"
              Filter="FilterFunc">
        <ToolBarContent>
            <MudText Typo="Typo.h6">Lista</MudText>
            <MudSpacer />

            <MudTextField @bind-Value="_search"
                          Placeholder="Szukaj..."
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search"
                          Immediate="true"
                          Class="mr-4"
                          Margin="Margin.Dense" />

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Add"
                       OnClick="CreateAsync">
                Dodaj
            </MudButton>
        </ToolBarContent>

        <HeaderContent>
            <MudTh>Id</MudTh>
            <MudTh>Numer</MudTh>
            <MudTh>Podmiot</MudTh>
            <MudTh>Wyst.</MudTh>
            <MudTh>Sprz.</MudTh>
            <MudTh>Waluta</MudTh>
            <MudTh class="text-right">Netto</MudTh>
            <MudTh class="text-right">Brutto</MudTh>
            <MudTh></MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd DataLabel="Id">@context.IdFaktury</MudTd>
            <MudTd DataLabel="Numer">@context.NumerFaktury</MudTd>
            <MudTd DataLabel="Podmiot">@context.IdPodmiotu</MudTd>
            <MudTd DataLabel="Wyst.">@context.DataWystawienia.ToString("yyyy-MM-dd")</MudTd>
            <MudTd DataLabel="Sprz.">@context.DataSprzedazy?.ToString("yyyy-MM-dd")</MudTd>
            <MudTd DataLabel="Waluta">@context.KodWaluty</MudTd>
            <MudTd DataLabel="Netto" Class="text-right">@context.KwotaNetto</MudTd>
            <MudTd DataLabel="Brutto" Class="text-right">@context.KwotaBrutto</MudTd>

            <MudTd DataLabel="Akcje" Class="text-right">
                <MudIconButton Icon="@Icons.Material.Filled.Edit"
                               Color="Color.Primary"
                               Size="Size.Small"
                               OnClick="@(() => EditAsync(context))" />

                <MudIconButton Icon="@Icons.Material.Filled.Delete"
                               Color="Color.Error"
                               Size="Size.Small"
                               OnClick="@(() => DeleteAsync(context))" />
            </MudTd>
        </RowTemplate>

        <NoRecordsContent>
            <MudText Class="pa-4">Brak rekordów.</MudText>
        </NoRecordsContent>
    </MudTable>
</MudPaper>

@code {
    private List<FakturaDto> _items = new();
    private List<PodmiotDto> _podmioty = new();
    private List<WalutaDto> _waluty = new();

    private string _search = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await ReloadAsync();
    }

    private async Task ReloadAsync()
    {
        try
        {
            _podmioty = await PodmiotyService.GetAllAsync();
            _waluty = await WalutyService.GetAllAsync();
            _items = await FakturyService.GetAllAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd ładowania danych: {ex.Message}", Severity.Error);
        }
    }

    private bool FilterFunc(FakturaDto item)
    {
        if (string.IsNullOrWhiteSpace(_search))
            return true;

        var s = _search.Trim();

        return item.IdFaktury.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || (item.NumerFaktury?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || item.IdPodmiotu.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || item.DataWystawienia.ToString("yyyy-MM-dd").Contains(s, StringComparison.OrdinalIgnoreCase)
               || (item.DataSprzedazy?.ToString("yyyy-MM-dd").Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || (item.KodWaluty?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false);
    }

    private async Task CreateAsync()
    {
        var model = new FakturaDto
        {
            DataWystawienia = DateTime.Today,
            KodWaluty = "PLN"
        };

        var parameters = new DialogParameters
        {
            ["Model"] = model,
            ["IsEdit"] = false,
            ["Podmioty"] = _podmioty,
            ["Waluty"] = _waluty
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };
        var dialog = DialogService.Show<FakturaDialog>("Dodaj fakturę", parameters, options);
        var result = await dialog.Result;

        if (result.Canceled || result.Data is not FakturaDto dto)
            return;

        try
        {
            var created = await FakturyService.CreateAsync(new CreateFakturaRequest
            {
                NumerFaktury = dto.NumerFaktury,
                IdPodmiotu = dto.IdPodmiotu,
                DataWystawienia = dto.DataWystawienia,
                DataSprzedazy = dto.DataSprzedazy,
                KodWaluty = dto.KodWaluty,
                KwotaNetto = dto.KwotaNetto,
                KwotaBrutto = dto.KwotaBrutto
            });

            _items.Add(created);
            Snackbar.Add("Dodano fakturę.", Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd dodawania faktury: {ex.Message}", Severity.Error);
        }
    }

    private async Task EditAsync(FakturaDto item)
    {
        var model = new FakturaDto
        {
            IdFaktury = item.IdFaktury,
            NumerFaktury = item.NumerFaktury,
            IdPodmiotu = item.IdPodmiotu,
            DataWystawienia = item.DataWystawienia,
            DataSprzedazy = item.DataSprzedazy,
            KodWaluty = item.KodWaluty,
            KwotaNetto = item.KwotaNetto,
            KwotaBrutto = item.KwotaBrutto
        };

        var parameters = new DialogParameters
        {
            ["Model"] = model,
            ["IsEdit"] = true,
            ["Podmioty"] = _podmioty,
            ["Waluty"] = _waluty
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };
        var dialog = DialogService.Show<FakturaDialog>("Edytuj fakturę", parameters, options);
        var result = await dialog.Result;

        if (result.Canceled || result.Data is not FakturaDto dto)
            return;

        try
        {
            var updated = await FakturyService.UpdateAsync(dto.IdFaktury, new UpdateFakturaRequest
            {
                NumerFaktury = dto.NumerFaktury,
                IdPodmiotu = dto.IdPodmiotu,
                DataWystawienia = dto.DataWystawienia,
                DataSprzedazy = dto.DataSprzedazy,
                KodWaluty = dto.KodWaluty,
                KwotaNetto = dto.KwotaNetto,
                KwotaBrutto = dto.KwotaBrutto
            });

            if (updated is null)
            {
                Snackbar.Add("Nie znaleziono faktury (404).", Severity.Warning);
                return;
            }

            var idx = _items.FindIndex(x => x.IdFaktury == updated.IdFaktury);
            if (idx >= 0) _items[idx] = updated;

            Snackbar.Add("Zapisano zmiany.", Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd zapisu: {ex.Message}", Severity.Error);
        }
    }

    private async Task DeleteAsync(FakturaDto item)
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Usuń",
            $"Czy na pewno usunąć fakturę Id={item.IdFaktury}?",
            yesText: "Usuń",
            cancelText: "Anuluj");

        if (confirm != true)
            return;

        try
        {
            var ok = await FakturyService.DeleteAsync(item.IdFaktury);
            if (!ok)
            {
                Snackbar.Add("Nie znaleziono faktury (404).", Severity.Warning);
                return;
            }

            _items.RemoveAll(x => x.IdFaktury == item.IdFaktury);
            Snackbar.Add("Usunięto.", Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd usuwania: {ex.Message}", Severity.Error);
        }
    }
}
