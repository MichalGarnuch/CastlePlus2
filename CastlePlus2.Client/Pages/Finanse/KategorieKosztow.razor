@page "/finanse/kategorie-kosztow"
@using MudBlazor
@using CastlePlus2.Client.Services.Finanse
@using CastlePlus2.Contracts.DTOs.Finanse
@using CastlePlus2.Contracts.Requests.Finanse
@inject IKategorieKosztowService Service
@inject ISnackbar Snackbar
@inject IDialogService Dialogs

<MudPaper Class="glass-panel pa-4 pa-sm-6" Elevation="0" Rounded="Rounded.Xl">
    <MudStack Spacing="3">

        <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
            <MudStack Spacing="0">
                <MudText Typo="Typo.h5" Class="fw-700">Kategorie kosztów</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">[finanse].[KategoriaKosztu]</MudText>
            </MudStack>

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Add"
                       OnClick="OpenCreateDialog">
                Dodaj
            </MudButton>
        </MudStack>

        <MudTextField @bind-Value="_search"
                      Placeholder="Szukaj (Kod/Nazwa/Id)..."
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      Immediate="true"
                      Margin="Margin.Dense" />

        <MudTable Items="_items"
                  Dense="true"
                  Hover="true"
                  Bordered="true"
                  Striped="true"
                  Filter="FilterFunc"
                  Elevation="0">

            <HeaderContent>
                <MudTh>Id</MudTh>
                <MudTh>Kod</MudTh>
                <MudTh>Nazwa</MudTh>
                <MudTh Class="text-right"></MudTh>
            </HeaderContent>

            <RowTemplate>
                <MudTd DataLabel="Id">@context.IdKategoriiKosztu</MudTd>
                <MudTd DataLabel="Kod">@context.Kod</MudTd>
                <MudTd DataLabel="Nazwa">@context.Nazwa</MudTd>
                <MudTd DataLabel="Akcje" Class="text-right">
                    <MudIconButton Icon="@Icons.Material.Filled.Edit"
                                   Color="Color.Primary"
                                   Size="Size.Small"
                                   OnClick="@(() => OpenEditDialog(context))" />
                    <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                   Color="Color.Error"
                                   Size="Size.Small"
                                   OnClick="@(() => DeleteAsync(context))" />
                </MudTd>
            </RowTemplate>

            <NoRecordsContent>
                <MudText>Brak rekordów.</MudText>
            </NoRecordsContent>
        </MudTable>

    </MudStack>
</MudPaper>

@code {
    private List<KategoriaKosztuDto> _items = new();
    private string _search = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await ReloadAsync();
    }

    private async Task ReloadAsync()
    {
        try
        {
            _items = (await Service.GetAllAsync()).ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd pobierania: {ex.Message}", Severity.Error);
        }
    }

    private bool FilterFunc(KategoriaKosztuDto x)
    {
        if (string.IsNullOrWhiteSpace(_search))
            return true;

        var s = _search.Trim();

        return x.IdKategoriiKosztu.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || (x.Kod?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || (x.Nazwa?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false);
    }

    private async Task OpenCreateDialog()
    {
        var model = new KategoriaKosztuDto();

        var parameters = new DialogParameters
        {
            ["Model"] = model,
            ["IsEdit"] = false
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Small };
        var dialog = Dialogs.Show<KategoriaKosztuDialog>("Nowa kategoria kosztu", parameters, options);
        var result = await dialog.Result;

        if (result.Canceled || result.Data is not KategoriaKosztuDto dto)
            return;

        try
        {
            var created = await Service.CreateAsync(new CreateKategoriaKosztuRequest
            {
                Kod = dto.Kod,
                Nazwa = dto.Nazwa
            });

            Snackbar.Add($"Dodano (Id={created.IdKategoriiKosztu}).", Severity.Success);
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd dodawania: {ex.Message}", Severity.Error);
        }
    }

    private async Task OpenEditDialog(KategoriaKosztuDto item)
    {
        var clone = new KategoriaKosztuDto
        {
            IdKategoriiKosztu = item.IdKategoriiKosztu,
            Kod = item.Kod,
            Nazwa = item.Nazwa
        };

        var parameters = new DialogParameters
        {
            ["Model"] = clone,
            ["IsEdit"] = true
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Small };
        var dialog = Dialogs.Show<KategoriaKosztuDialog>("Edycja kategorii kosztu", parameters, options);
        var result = await dialog.Result;

        if (result.Canceled || result.Data is not KategoriaKosztuDto dto)
            return;

        try
        {
            var updated = await Service.UpdateAsync(dto.IdKategoriiKosztu, new UpdateKategoriaKosztuRequest
            {
                Kod = dto.Kod,
                Nazwa = dto.Nazwa
            });

            if (updated is null)
            {
                Snackbar.Add("Nie znaleziono rekordu (404).", Severity.Warning);
                return;
            }

            Snackbar.Add("Zapisano zmiany.", Severity.Success);
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd zapisu: {ex.Message}", Severity.Error);
        }
    }

    private async Task DeleteAsync(KategoriaKosztuDto item)
    {
        bool? confirm = await Dialogs.ShowMessageBox(
            "Usuń",
            $"Czy na pewno usunąć kategorię Id={item.IdKategoriiKosztu} (Kod={item.Kod})?",
            yesText: "Usuń",
            cancelText: "Anuluj");

        if (confirm != true)
            return;

        try
        {
            await Service.DeleteAsync(item.IdKategoriiKosztu);
            Snackbar.Add("Usunięto.", Severity.Success);
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd usuwania: {ex.Message}", Severity.Error);
        }
    }
}
