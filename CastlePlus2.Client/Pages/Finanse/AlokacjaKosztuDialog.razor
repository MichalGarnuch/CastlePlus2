@using MudBlazor
@using CastlePlus2.Contracts.DTOs.Finanse

<MudDialog>
    <DialogContent>
        <MudForm @ref="_form">
            <MudText Typo="Typo.h6" Class="mb-3">
                @(_isEdit ? "Edycja alokacji kosztu" : "Nowa alokacja kosztu")
            </MudText>

            <MudGrid Spacing="2">
                <MudItem xs="12" sm="6">
                    <MudNumericField T="long"
                                     Label="IdPozycjiKosztu"
                                     Dense="true"
                                     Required="true"
                                     RequiredError="IdPozycjiKosztu jest wymagane"
                                     @bind-Value="Model.IdPozycjiKosztu" />
                </MudItem>

                <MudItem xs="12" sm="6">
                    <MudTextField Label="IdEncji (GUID)"
                                  Dense="true"
                                  Required="true"
                                  RequiredError="IdEncji jest wymagane"
                                  @bind-Value="_idEncjiText" />
                </MudItem>

                <MudItem xs="12" sm="6">
                    <MudNumericField T="decimal"
                                     Label="Kwota netto"
                                     Dense="true"
                                     Required="true"
                                     RequiredError="Kwota netto jest wymagana"
                                     @bind-Value="Model.KwotaNetto" />
                </MudItem>

                <MudItem xs="12" sm="6">
                    <MudNumericField T="decimal"
                                     Label="Kwota brutto"
                                     Dense="true"
                                     Required="true"
                                     RequiredError="Kwota brutto jest wymagana"
                                     @bind-Value="Model.KwotaBrutto" />
                </MudItem>

                @if (_isEdit)
                {
                    <MudItem xs="12">
                        <MudText Typo="Typo.caption" Color="Color.Secondary">
                            IdAlokacji: @Model.IdAlokacji
                        </MudText>
                    </MudItem>
                }
            </MudGrid>
        </MudForm>
    </DialogContent>

    <DialogActions>
        <MudButton Variant="Variant.Text" OnClick="Cancel">Anuluj</MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="SaveAsync">Zapisz</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public AlokacjaKosztuDto Model { get; set; } = new();
    [Parameter] public bool IsEdit { get; set; }

    private MudForm? _form;
    private bool _isEdit => IsEdit;

    private string _idEncjiText = string.Empty;

    protected override void OnInitialized()
    {
        _idEncjiText = Model.IdEncji == Guid.Empty ? string.Empty : Model.IdEncji.ToString();
    }

    private void Cancel() => MudDialog.Cancel();

    private async Task SaveAsync()
    {
        if (_form is null)
            return;

        await _form.Validate();
        if (!_form.IsValid)
            return;

        if (Model.IdPozycjiKosztu <= 0)
            return;

        if (!Guid.TryParse(_idEncjiText?.Trim(), out var guid))
            return;

        Model.IdEncji = guid;

        MudDialog.Close(DialogResult.Ok(Model));
    }
}
