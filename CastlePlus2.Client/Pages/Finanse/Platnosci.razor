@page "/finanse/platnosci"

@using MudBlazor
@using CastlePlus2.Contracts.DTOs.Finanse
@using CastlePlus2.Contracts.DTOs.Podmioty
@using CastlePlus2.Contracts.DTOs.Slowniki
@using CastlePlus2.Contracts.Requests.Finanse
@using CastlePlus2.Client.Services.Finanse
@using CastlePlus2.Client.Services.Podmioty
@using CastlePlus2.Client.Services.Slowniki

@inject IPlatnosciService PlatnosciService
@inject IPodmiotyService PodmiotyService
@inject IWalutyService WalutyService
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<MudText Typo="Typo.h4" Class="fw-700 mb-4">Płatności</MudText>

<MudPaper Class="pa-4">
    <MudTable Items="_items"
              Dense="true"
              Hover="true"
              Bordered="true"
              Striped="true"
              Filter="FilterFunc">

        <ToolBarContent>
            <MudText Typo="Typo.h6">Lista</MudText>
            <MudSpacer />

            <MudTextField @bind-Value="_search"
                          Placeholder="Szukaj..."
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search"
                          Immediate="true"
                          Class="mr-4"
                          Margin="Margin.Dense" />

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Add"
                       OnClick="CreateAsync">
                Dodaj
            </MudButton>
        </ToolBarContent>

        <HeaderContent>
            <MudTh>Id</MudTh>
            <MudTh>Data</MudTh>
            <MudTh>Podmiot</MudTh>
            <MudTh>Waluta</MudTh>
            <MudTh class="text-right">Kwota</MudTh>
            <MudTh></MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd DataLabel="Id">@context.IdPlatnosci</MudTd>
            <MudTd DataLabel="Data">@context.DataPlatnosci.ToString("yyyy-MM-dd")</MudTd>
            <MudTd DataLabel="Podmiot">@GetPodmiotLabel(context.IdPodmiotu)</MudTd>
            <MudTd DataLabel="Waluta">@context.KodWaluty</MudTd>
            <MudTd DataLabel="Kwota" Class="text-right">@context.Kwota.ToString("0.00")</MudTd>

            <MudTd DataLabel="Akcje" Class="text-right">
                <MudIconButton Icon="@Icons.Material.Filled.Edit"
                               Color="Color.Primary"
                               Size="Size.Small"
                               OnClick="@(() => EditAsync(context))" />

                <MudIconButton Icon="@Icons.Material.Filled.Delete"
                               Color="Color.Error"
                               Size="Size.Small"
                               OnClick="@(() => DeleteAsync(context))" />
            </MudTd>
        </RowTemplate>

        <NoRecordsContent>
            <MudText Class="pa-4">Brak rekordów.</MudText>
        </NoRecordsContent>

    </MudTable>
</MudPaper>

@code {
    private List<PlatnoscDto> _items = new();
    private List<PodmiotDto> _podmioty = new();
    private List<WalutaDto> _waluty = new();
    private string _search = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadLookupsAsync();
        await ReloadAsync();
    }

    private async Task LoadLookupsAsync()
    {
        try
        {
            _podmioty = await PodmiotyService.GetAllAsync();
            _waluty = await WalutyService.GetAllAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd ładowania słowników: {ex.Message}", Severity.Error);
        }
    }

    private async Task ReloadAsync()
    {
        try
        {
            _items = await PlatnosciService.GetAllAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd pobierania płatności: {ex.Message}", Severity.Error);
        }
    }

    private string GetPodmiotLabel(long idPodmiotu)
    {
        var p = _podmioty.FirstOrDefault(x => x.IdPodmiotu == idPodmiotu);
        return p is null ? $"Id={idPodmiotu}" : $"Id={p.IdPodmiotu} / {p.Nazwa}";
    }

    private bool FilterFunc(PlatnoscDto item)
    {
        if (string.IsNullOrWhiteSpace(_search))
            return true;

        var s = _search.Trim();

        return item.IdPlatnosci.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || item.IdPodmiotu.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || item.DataPlatnosci.ToString("yyyy-MM-dd").Contains(s, StringComparison.OrdinalIgnoreCase)
               || (item.KodWaluty?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false)
               || item.Kwota.ToString("0.00").Contains(s, StringComparison.OrdinalIgnoreCase)
               || GetPodmiotLabel(item.IdPodmiotu).Contains(s, StringComparison.OrdinalIgnoreCase);
    }

    private async Task CreateAsync()
    {
        var model = new PlatnoscDto
        {
            DataPlatnosci = DateTime.Today,
            KodWaluty = "PLN"
        };

        var parameters = new DialogParameters
        {
            ["Model"] = model,
            ["IsEdit"] = false,
            ["Podmioty"] = _podmioty,
            ["Waluty"] = _waluty
        };

        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = DialogService.Show<PlatnoscDialog>("Nowa płatność", parameters, options);
        var result = await dialog.Result;

        if (result.Canceled) return;

        var dto = (PlatnoscDto)result.Data;

        try
        {
            var created = await PlatnosciService.CreateAsync(new CreatePlatnoscRequest
            {
                IdPodmiotu = dto.IdPodmiotu,
                DataPlatnosci = dto.DataPlatnosci,
                KodWaluty = dto.KodWaluty,
                Kwota = dto.Kwota
            });

            _items.Insert(0, created);
            Snackbar.Add("Dodano płatność.", Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd dodawania płatności: {ex.Message}", Severity.Error);
        }
    }

    private async Task EditAsync(PlatnoscDto item)
    {
        var clone = new PlatnoscDto
        {
            IdPlatnosci = item.IdPlatnosci,
            IdPodmiotu = item.IdPodmiotu,
            DataPlatnosci = item.DataPlatnosci,
            KodWaluty = item.KodWaluty,
            Kwota = item.Kwota
        };

        var parameters = new DialogParameters
        {
            ["Model"] = clone,
            ["IsEdit"] = true,
            ["Podmioty"] = _podmioty,
            ["Waluty"] = _waluty
        };

        var options = new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true };
        var dialog = DialogService.Show<PlatnoscDialog>("Edycja płatności", parameters, options);
        var result = await dialog.Result;

        if (result.Canceled) return;

        var dto = (PlatnoscDto)result.Data;

        try
        {
            var updated = await PlatnosciService.UpdateAsync(item.IdPlatnosci, new UpdatePlatnoscRequest
            {
                IdPodmiotu = dto.IdPodmiotu,
                DataPlatnosci = dto.DataPlatnosci,
                KodWaluty = dto.KodWaluty,
                Kwota = dto.Kwota
            });

            if (updated is null)
            {
                Snackbar.Add("Rekord nie istnieje (404).", Severity.Warning);
                await ReloadAsync();
                return;
            }

            var idx = _items.FindIndex(x => x.IdPlatnosci == updated.IdPlatnosci);
            if (idx >= 0) _items[idx] = updated;

            Snackbar.Add("Zapisano zmiany.", Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd zapisu: {ex.Message}", Severity.Error);
        }
    }

    private async Task DeleteAsync(PlatnoscDto item)
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Usuń",
            $"Czy na pewno usunąć płatność Id={item.IdPlatnosci}?",
            yesText: "Usuń",
            cancelText: "Anuluj");

        if (confirm != true)
            return;

        try
        {
            var ok = await PlatnosciService.DeleteAsync(item.IdPlatnosci);
            if (!ok)
            {
                Snackbar.Add("Rekord nie istnieje (404).", Severity.Warning);
                await ReloadAsync();
                return;
            }

            _items.RemoveAll(x => x.IdPlatnosci == item.IdPlatnosci);
            Snackbar.Add("Usunięto.", Severity.Success);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd usuwania: {ex.Message}", Severity.Error);
        }
    }
}
