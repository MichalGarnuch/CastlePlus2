@page "/finanse/pozycje-kosztow"
@using MudBlazor
@using CastlePlus2.Client.Services.Finanse
@using CastlePlus2.Contracts.DTOs.Finanse
@using CastlePlus2.Contracts.Requests.Finanse
@inject IPozycjeKosztowService Service
@inject ISnackbar Snackbar
@inject IDialogService Dialogs

<MudPaper Class="glass-panel pa-4 pa-sm-6" Elevation="0" Rounded="Rounded.Xl">
    <MudStack Spacing="3">

        <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
            <MudStack Spacing="0">
                <MudText Typo="Typo.h5" Class="fw-700">Pozycje kosztów</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary">[finanse].[PozycjaKosztu]</MudText>
            </MudStack>

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Add"
                       OnClick="OpenCreateDialog">
                Dodaj
            </MudButton>
        </MudStack>

        <MudTextField @bind-Value="_search"
                      Placeholder="Szukaj (Id / IdFaktury / IdKategorii / Opis)..."
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      Immediate="true"
                      Margin="Margin.Dense" />

        <MudTable Items="_items"
                  Dense="true"
                  Hover="true"
                  Bordered="true"
                  Striped="true"
                  Filter="FilterFunc"
                  Elevation="0">

            <HeaderContent>
                <MudTh>Id</MudTh>
                <MudTh>IdFaktury</MudTh>
                <MudTh>IdKategorii</MudTh>
                <MudTh>Opis</MudTh>
                <MudTh>Netto</MudTh>
                <MudTh>Brutto</MudTh>
                <MudTh Class="text-right"></MudTh>
            </HeaderContent>

            <RowTemplate>
                <MudTd DataLabel="Id">@context.IdPozycjiKosztu</MudTd>
                <MudTd DataLabel="IdFaktury">@context.IdFaktury</MudTd>
                <MudTd DataLabel="IdKategorii">@context.IdKategoriiKosztu</MudTd>
                <MudTd DataLabel="Opis">@context.Opis</MudTd>
                <MudTd DataLabel="Netto">@context.KwotaNetto</MudTd>
                <MudTd DataLabel="Brutto">@context.KwotaBrutto</MudTd>

                <MudTd DataLabel="Akcje" Class="text-right">
                    <MudIconButton Icon="@Icons.Material.Filled.Edit"
                                   Color="Color.Primary"
                                   Size="Size.Small"
                                   OnClick="@(() => OpenEditDialog(context))" />
                    <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                   Color="Color.Error"
                                   Size="Size.Small"
                                   OnClick="@(() => DeleteAsync(context))" />
                </MudTd>
            </RowTemplate>

            <NoRecordsContent>
                <MudText>Brak rekordów.</MudText>
            </NoRecordsContent>
        </MudTable>

    </MudStack>
</MudPaper>

@code {
    private List<PozycjaKosztuDto> _items = new();
    private string _search = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await ReloadAsync();
    }

    private async Task ReloadAsync()
    {
        try
        {
            _items = (await Service.GetAllAsync()).ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd pobierania: {ex.Message}", Severity.Error);
        }
    }

    private bool FilterFunc(PozycjaKosztuDto x)
    {
        if (string.IsNullOrWhiteSpace(_search))
            return true;

        var s = _search.Trim();

        return x.IdPozycjiKosztu.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || x.IdFaktury.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || x.IdKategoriiKosztu.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || (x.Opis?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false);
    }

    private async Task OpenCreateDialog()
    {
        var model = new PozycjaKosztuDto();

        var parameters = new DialogParameters
        {
            ["Model"] = model,
            ["IsEdit"] = false
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };
        var dialog = Dialogs.Show<PozycjaKosztuDialog>("Nowa pozycja kosztu", parameters, options);
        var result = await dialog.Result;

        if (result.Canceled || result.Data is not PozycjaKosztuDto dto)
            return;

        try
        {
            var created = await Service.CreateAsync(new CreatePozycjaKosztuRequest
            {
                IdFaktury = dto.IdFaktury,
                IdKategoriiKosztu = dto.IdKategoriiKosztu,
                Opis = dto.Opis,
                KwotaNetto = dto.KwotaNetto,
                KwotaBrutto = dto.KwotaBrutto
            });

            Snackbar.Add($"Dodano (Id={created.IdPozycjiKosztu}).", Severity.Success);
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd dodawania: {ex.Message}", Severity.Error);
        }
    }

    private async Task OpenEditDialog(PozycjaKosztuDto item)
    {
        var clone = new PozycjaKosztuDto
        {
            IdPozycjiKosztu = item.IdPozycjiKosztu,
            IdFaktury = item.IdFaktury,
            IdKategoriiKosztu = item.IdKategoriiKosztu,
            Opis = item.Opis,
            KwotaNetto = item.KwotaNetto,
            KwotaBrutto = item.KwotaBrutto
        };

        var parameters = new DialogParameters
        {
            ["Model"] = clone,
            ["IsEdit"] = true
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };
        var dialog = Dialogs.Show<PozycjaKosztuDialog>("Edycja pozycji kosztu", parameters, options);
        var result = await dialog.Result;

        if (result.Canceled || result.Data is not PozycjaKosztuDto dto)
            return;

        try
        {
            var updated = await Service.UpdateAsync(dto.IdPozycjiKosztu, new UpdatePozycjaKosztuRequest
            {
                IdFaktury = dto.IdFaktury,
                IdKategoriiKosztu = dto.IdKategoriiKosztu,
                Opis = dto.Opis,
                KwotaNetto = dto.KwotaNetto,
                KwotaBrutto = dto.KwotaBrutto
            });

            if (updated is null)
            {
                Snackbar.Add("Nie znaleziono rekordu (404).", Severity.Warning);
                return;
            }

            Snackbar.Add("Zapisano zmiany.", Severity.Success);
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd zapisu: {ex.Message}", Severity.Error);
        }
    }

    private async Task DeleteAsync(PozycjaKosztuDto item)
    {
        bool? confirm = await Dialogs.ShowMessageBox(
            "Usuń",
            $"Czy na pewno usunąć pozycję Id={item.IdPozycjiKosztu}?",
            yesText: "Usuń",
            cancelText: "Anuluj");

        if (confirm != true)
            return;

        try
        {
            await Service.DeleteAsync(item.IdPozycjiKosztu);
            Snackbar.Add("Usunięto.", Severity.Success);
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd usuwania: {ex.Message}", Severity.Error);
        }
    }
}
