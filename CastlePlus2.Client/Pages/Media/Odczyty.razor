@page "/media/odczyty"
@using MudBlazor
@using CastlePlus2.Contracts.DTOs.Media
@using CastlePlus2.Contracts.Requests.Media
@using CastlePlus2.Client.Services.Media
@inject IOdczytyService OdczytyService
@inject ILicznikiService LicznikiService
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<MudText Typo="Typo.h4" Class="fw-700 mb-4">Odczyty</MudText>

<MudPaper Class="pa-4">
    <MudTable Items="_items"
              Dense="true"
              Hover="true"
              Bordered="true"
              Striped="true"
              Filter="FilterFunc">

        <ToolBarContent>
            <MudText Typo="Typo.h6">Lista</MudText>
            <MudSpacer />

            <MudTextField @bind-Value="_search"
                          Placeholder="Szukaj..."
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search"
                          Immediate="true"
                          Class="mr-4"
                          Margin="Margin.Dense" />

            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.Add"
                       OnClick="CreateAsync">
                Dodaj
            </MudButton>
        </ToolBarContent>

        <HeaderContent>
            <MudTh>Id</MudTh>
            <MudTh>Licznik</MudTh>
            <MudTh>Data</MudTh>
            <MudTh>Wskazanie</MudTh>
            <MudTh>Źródło</MudTh>
            <MudTh></MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd DataLabel="Id">@context.IdOdczytu</MudTd>
            <MudTd DataLabel="Licznik">@GetLicznikLabel(context.IdLicznika)</MudTd>
            <MudTd DataLabel="Data">@context.DataOdczytu.ToString("yyyy-MM-dd")</MudTd>
            <MudTd DataLabel="Wskazanie">@context.Wskazanie</MudTd>
            <MudTd DataLabel="Źródło">@context.Zrodlo</MudTd>

            <MudTd DataLabel="Akcje" Class="text-right">
                <MudIconButton Icon="@Icons.Material.Filled.Edit"
                               Color="Color.Primary"
                               Size="Size.Small"
                               OnClick="@(() => EditAsync(context))" />

                <MudIconButton Icon="@Icons.Material.Filled.Delete"
                               Color="Color.Error"
                               Size="Size.Small"
                               OnClick="@(() => DeleteAsync(context))" />
            </MudTd>
        </RowTemplate>

        <NoRecordsContent>
            <MudText Class="pa-4">Brak rekordów.</MudText>
        </NoRecordsContent>

    </MudTable>
</MudPaper>

@code {
    private List<OdczytDto> _items = new();
    private List<LicznikDto> _liczniki = new();
    private string _search = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await ReloadAsync();
    }

    private async Task ReloadAsync()
    {
        try
        {
            _liczniki = await LicznikiService.GetAllAsync();
            _items = await OdczytyService.GetAllAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd pobierania danych: {ex.Message}", Severity.Error);
        }
    }

    private string GetLicznikLabel(long idLicznika)
    {
        var l = _liczniki.FirstOrDefault(x => x.IdLicznika == idLicznika);
        return l is null ? $"IdLicznika={idLicznika}" : $"{l.NumerNV} (Id={idLicznika})";
    }

    private bool FilterFunc(OdczytDto item)
    {
        if (string.IsNullOrWhiteSpace(_search))
            return true;

        var s = _search.Trim();

        return item.IdOdczytu.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || item.IdLicznika.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || item.DataOdczytu.ToString("yyyy-MM-dd").Contains(s, StringComparison.OrdinalIgnoreCase)
               || item.Wskazanie.ToString().Contains(s, StringComparison.OrdinalIgnoreCase)
               || (item.Zrodlo?.Contains(s, StringComparison.OrdinalIgnoreCase) ?? false);
    }

    private async Task CreateAsync()
    {
        var parameters = new DialogParameters
        {
            ["Model"] = new OdczytDto { DataOdczytu = DateTime.Today },
            ["Liczniki"] = _liczniki,
            ["IsEdit"] = false
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };
        var dialog = DialogService.Show<OdczytDialog>("Dodaj odczyt", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is OdczytDto model)
        {
            try
            {
                await OdczytyService.CreateAsync(new CreateOdczytRequest
                {
                    IdLicznika = model.IdLicznika,
                    DataOdczytu = model.DataOdczytu,
                    Wskazanie = model.Wskazanie,
                    Zrodlo = model.Zrodlo
                });

                Snackbar.Add("Dodano odczyt.", Severity.Success);
                await ReloadAsync();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Błąd dodawania: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task EditAsync(OdczytDto item)
    {
        var clone = new OdczytDto
        {
            IdOdczytu = item.IdOdczytu,
            IdLicznika = item.IdLicznika,
            DataOdczytu = item.DataOdczytu,
            Wskazanie = item.Wskazanie,
            Zrodlo = item.Zrodlo
        };

        var parameters = new DialogParameters
        {
            ["Model"] = clone,
            ["Liczniki"] = _liczniki,
            ["IsEdit"] = true
        };

        var options = new DialogOptions { CloseButton = true, FullWidth = true, MaxWidth = MaxWidth.Medium };
        var dialog = DialogService.Show<OdczytDialog>("Edytuj odczyt", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is OdczytDto model)
        {
            try
            {
                var updated = await OdczytyService.UpdateAsync(model.IdOdczytu, new UpdateOdczytRequest
                {
                    IdLicznika = model.IdLicznika,
                    DataOdczytu = model.DataOdczytu,
                    Wskazanie = model.Wskazanie,
                    Zrodlo = model.Zrodlo
                });

                if (updated is null)
                {
                    Snackbar.Add("Nie znaleziono rekordu do aktualizacji.", Severity.Warning);
                    return;
                }

                Snackbar.Add("Zapisano zmiany.", Severity.Success);
                await ReloadAsync();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Błąd zapisu: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task DeleteAsync(OdczytDto item)
    {
        bool? confirm = await DialogService.ShowMessageBox(
            "Usuń",
            $"Czy na pewno usunąć odczyt Id={item.IdOdczytu}?",
            yesText: "Usuń",
            cancelText: "Anuluj");

        if (confirm != true)
            return;

        try
        {
            var ok = await OdczytyService.DeleteAsync(item.IdOdczytu);
            if (!ok)
            {
                Snackbar.Add("Nie znaleziono rekordu do usunięcia.", Severity.Warning);
                return;
            }

            Snackbar.Add("Usunięto.", Severity.Success);
            await ReloadAsync();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Błąd usuwania: {ex.Message}", Severity.Error);
        }
    }
}
