@page "/media/rodzaje-mediow"

@using MudBlazor
@using CastlePlus2.Client.Services.Media
@using CastlePlus2.Contracts.DTOs.Media

@inject IRodzajeMediowService Service
@inject IDialogService Dialogs
@inject ISnackbar Snackbar

<MudPaper Class="glass-panel pa-4" Rounded="Rounded.Xl" Elevation="0">

    <MudStack Spacing="3">

        <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
            <MudText Typo="Typo.h5" Class="fw-700">Rodzaje Mediów</MudText>

            <MudButton StartIcon="@Icons.Material.Filled.Add"
                       Color="Color.Primary"
                       Variant="Variant.Filled"
                       OnClick="OpenCreate">
                Dodaj
            </MudButton>
        </MudStack>

        <MudTextField @bind-Value="_q"
                      Placeholder="Szukaj..."
                      Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search"
                      Immediate="true" />

        <MudTable Items="_filtered" Dense Hover Bordered Loading="_loading">
            <HeaderContent>
                <MudTh>Kod</MudTh>
                <MudTh>Nazwa</MudTh>
                <MudTh />
            </HeaderContent>

            <RowTemplate>
                <MudTd>@context.KodRodzaju</MudTd>
                <MudTd>@context.Nazwa</MudTd>
                <MudTd Align="Align.Right">
                    <MudIconButton Icon="@Icons.Material.Filled.Edit"
                                   OnClick="@(() => OpenEdit(context))" />
                    <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                   Color="Color.Error"
                                   OnClick="@(() => Delete(context))" />
                </MudTd>
            </RowTemplate>
        </MudTable>

    </MudStack>
</MudPaper>

@code {
    private bool _loading = true;
    private string _q = string.Empty;
    private List<RodzajMediumDto> _items = new();

    private IEnumerable<RodzajMediumDto> _filtered =>
        string.IsNullOrWhiteSpace(_q)
            ? _items
            : _items.Where(x =>
                x.KodRodzaju.Contains(_q, StringComparison.OrdinalIgnoreCase) ||
                x.Nazwa.Contains(_q, StringComparison.OrdinalIgnoreCase));

    protected override async Task OnInitializedAsync()
    {
        await Reload();
    }

    private async Task Reload()
    {
        _loading = true;
        try
        {
            _items = await Service.GetAllAsync();
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task OpenCreate()
    {
        var p = new DialogParameters
        {
            ["IsCreate"] = true
        };

        var dlg = Dialogs.Show<RodzajMediumDialog>("Dodaj rodzaj medium", p);
        var result = await dlg.Result;

        if (result.Canceled) return;

        var dto = (RodzajMediumDto)result.Data!;
        await Service.CreateAsync(new CreateRodzajMediumRequest
        {
            KodRodzaju = dto.KodRodzaju,
            Nazwa = dto.Nazwa
        });

        Snackbar.Add("Dodano.", Severity.Success);
        await Reload();
    }

    private async Task OpenEdit(RodzajMediumDto item)
    {
        var p = new DialogParameters
        {
            ["IsCreate"] = false,
            ["KodRodzaju"] = item.KodRodzaju,
            ["Nazwa"] = item.Nazwa
        };

        var dlg = Dialogs.Show<RodzajMediumDialog>("Edytuj rodzaj medium", p);
        var result = await dlg.Result;

        if (result.Canceled) return;

        var dto = (RodzajMediumDto)result.Data!;
        await Service.UpdateAsync(item.KodRodzaju, new UpdateRodzajMediumRequest
        {
            Nazwa = dto.Nazwa
        });

        Snackbar.Add("Zapisano.", Severity.Success);
        await Reload();
    }

    private async Task Delete(RodzajMediumDto item)
    {
        var ok = await Dialogs.ShowMessageBox(
            "Usuń",
            $"Usunąć {item.KodRodzaju} – {item.Nazwa}?",
            yesText: "Usuń",
            cancelText: "Anuluj");

        if (ok != true) return;

        await Service.DeleteAsync(item.KodRodzaju);
        Snackbar.Add("Usunięto.", Severity.Success);
        await Reload();
    }
}
