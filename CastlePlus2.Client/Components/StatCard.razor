@using MudBlazor

<MudPaper Class="pa-4" Rounded="Rounded.Xl" Style="height:140px">
    <MudStack Justify="Justify.SpaceBetween" Style="height:100%">
        <MudIcon Icon="@Icon" Size="Size.Large" Color="@Color" />
        <MudText Typo="Typo.h5">@Value</MudText>
        <MudText Typo="Typo.body2" Color="Color.Secondary">@Title</MudText>
    </MudStack>
</MudPaper>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string Value { get; set; } = string.Empty;
    [Parameter] public string Icon { get; set; } = Icons.Material.Filled.Info;
    [Parameter] public Color Color { get; set; } = Color.Primary;
}
